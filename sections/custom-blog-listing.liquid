<div class="custom-blog-listing" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    <div class="blog-grid blog-layout-{{ section.settings.layout }}">
      {% assign blog = blogs[section.settings.blog] %}
      
      {% if section.settings.show_description and section.settings.description != blank %}
        <div class="blog-description rte">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      {% paginate blog.articles by section.settings.posts_per_page %}
        <div class="blog-articles">
          {% for article in blog.articles %}
            <div class="blog-article-card">
              <article class="blog-article">
                {% if section.settings.show_featured_image and article.image %}
                  <a href="{{ article.url }}" class="blog-article-image-link">
                    <div class="blog-article-image-container image-height-{{ section.settings.image_height }}">
                      <img 
                        srcset="{% if article.image.width >= 350 %}{{ article.image | img_url: '350x' }} 350w,{% endif %}
                                {% if article.image.width >= 750 %}{{ article.image | img_url: '750x' }} 750w,{% endif %}
                                {% if article.image.width >= 1100 %}{{ article.image | img_url: '1100x' }} 1100w,{% endif %}"
                        src="{{ article.image | img_url: '750x' }}"
                        sizes="(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw"
                        alt="{{ article.title | escape }}"
                        class="blog-article-image"
                        loading="lazy"
                        width="{{ article.image.width }}"
                        height="{{ article.image.height }}">
                    </div>
                  </a>
                {% endif %}
                
                <div class="blog-article-content">
                  {% if section.settings.show_date or section.settings.show_author %}
                    <div class="blog-article-meta">
                      {% if section.settings.show_date %}
                        <span class="blog-article-date">
                          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                            {{ article.published_at | date: "%B %d, %Y" }}
                          </time>
                        </span>
                      {% endif %}
                      
                      {% if section.settings.show_author and article.author %}
                        <span class="blog-article-author">
                          by {{ article.author }}
                        </span>
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  <h2 class="blog-article-title">
                    <a href="{{ article.url }}">{{ article.title }}</a>
                  </h2>
                  
                  {% if section.settings.show_excerpt %}
                    <div class="blog-article-excerpt">
                      {% if article.excerpt != blank %}
                        {{ article.excerpt }}
                      {% else %}
                        {{ article.content | strip_html | truncatewords: section.settings.excerpt_words }}
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  {% if section.settings.show_read_more %}
                    <a href="{{ article.url }}" class="blog-article-read-more">
                      {{ section.settings.read_more_text }}
                    </a>
                  {% endif %}
                </div>
              </article>
            </div>
          {% else %}
            <div class="empty-blog">
              <p>{{ section.settings.no_articles_text }}</p>
            </div>
          {% endfor %}
        </div>
        
        {% if paginate.pages > 1 %}
          <div class="blog-pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Blog Listing",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Read our latest articles and updates</p>"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show description",
      "default": true
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "list",
          "label": "List"
        }
      ],
      "default": "grid",
      "label": "Layout"
    },
    {
      "type": "range",
      "id": "posts_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Posts per page"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Show date"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "range",
      "id": "excerpt_words",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 30,
      "label": "Excerpt word count"
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "default": true,
      "label": "Show featured image"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Image height"
    },
    {
      "type": "checkbox",
      "id": "show_read_more",
      "default": true,
      "label": "Show read more button"
    },
    {
      "type": "text",
      "id": "read_more_text",
      "default": "Read more",
      "label": "Read more text"
    },
    {
      "type": "text",
      "id": "no_articles_text",
      "default": "No articles found",
      "label": "No articles text"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Custom Blog Listing",
      "settings": {}
    }
  ],
  "templates": ["page"]
}
{% endschema %}

<style>
  .custom-blog-listing {
    padding: 60px 0;
  }
  
  .blog-description {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 40px;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--light-text);
  }
  
  .blog-layout-grid .blog-articles {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }
  
  .blog-layout-list .blog-article {
    display: flex;
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .blog-layout-list .blog-article-image-container {
    flex: 0 0 40%;
  }
  
  .blog-article-image-container {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
    margin-bottom: 20px;
  }
  
  .image-height-small {
    aspect-ratio: 16/9;
  }
  
  .image-height-medium {
    aspect-ratio: 4/3;
  }
  
  .image-height-large {
    aspect-ratio: 1/1;
  }
  
  .blog-article-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-article-image-link:hover .blog-article-image {
    transform: scale(1.05);
  }
  
  .blog-article-meta {
    margin-bottom: 10px;
    font-size: 0.9rem;
    color: var(--light-text);
  }
  
  .blog-article-author {
    margin-left: 10px;
  }
  
  .blog-article-title {
    font-size: 1.5rem;
    margin-bottom: 15px;
    line-height: 1.3;
  }
  
  .blog-article-title a {
    color: var(--dark-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .blog-article-title a:hover {
    color: var(--primary-color);
  }
  
  .blog-article-excerpt {
    margin-bottom: 20px;
    color: var(--light-text);
    line-height: 1.6;
  }
  
  .blog-article-read-more {
    display: inline-block;
    color: var(--primary-color);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .blog-article-read-more:hover {
    color: var(--dark-text);
  }
  
  .blog-pagination {
    margin-top: 40px;
    text-align: center;
  }
  
  .empty-blog {
    text-align: center;
    padding: 40px 0;
    color: var(--light-text);
  }
  
  @media (max-width: 989px) {
    .blog-layout-grid .blog-articles {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 749px) {
    .blog-layout-grid .blog-articles {
      grid-template-columns: 1fr;
    }
    
    .blog-layout-list .blog-article {
      flex-direction: column;
    }
    
    .blog-layout-list .blog-article-image-container {
      flex: 0 0 100%;
    }
    
    .blog-article-title {
      font-size: 1.3rem;
    }
  }
</style>
