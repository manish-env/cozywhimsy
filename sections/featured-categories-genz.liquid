{% stylesheet %}
.categories-section {
  padding: 60px 0;
  position: relative;
  overflow: hidden;
}

.section-header {
  text-align: {{ section.settings.text_alignment }};
  margin-bottom: 40px;
  position: relative;
}

.section-header::after {
  content: '';
  display: block;
  width: 60px;
  height: 3px;
  background: linear-gradient(45deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  margin: 15px auto 0;
  border-radius: 3px;
  
  {% if section.settings.text_alignment == 'left' %}
    margin-left: 0;
  {% elsif section.settings.text_alignment == 'right' %}
    margin-left: auto;
    margin-right: 0;
  {% endif %}
  
  {% if section.settings.show_separator_desktop == false %}
    @media (min-width: 768px) {
      display: none;
    }
  {% endif %}
  
  {% if section.settings.show_separator_mobile == false %}
    @media (max-width: 767px) {
      display: none;
    }
  {% endif %}
}

.section-title {
  font-size: {{ section.settings.heading_size }}px;
  color: {{ section.settings.heading_color }};
  margin-bottom: 10px;
  font-weight: {{ section.settings.heading_weight }};
  line-height: 1.2;
}

.section-title.gradient-text {
  background: linear-gradient(to right, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.section-subheading {
  font-size: {{ section.settings.subheading_size }}px;
  line-height: 1.5;
  margin-top: 5px;
  margin-bottom: 20px;
  max-width: 800px;
  color: {{ section.settings.subheading_color }};
  font-weight: {{ section.settings.subheading_weight }};
}

.section-header.text-center .section-subheading {
  margin-left: auto;
  margin-right: auto;
}

.section-header.text-right .section-subheading {
  margin-left: auto;
  margin-right: 0;
}

.section-header.text-left .section-subheading {
  margin-left: 0;
  margin-right: auto;
}

.section-subheading.gradient-text {
  background: linear-gradient(to right, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

/* Promo Banner */
.promo-banner {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 40px;
  background-color: #1a1a1a;
  display: flex;
  align-items: center;
}

.desktop-hide-banner {
  @media (min-width: 768px) {
    display: none !important;
  }
}

.mobile-hide-banner {
  @media (max-width: 767px) {
    display: none !important;
  }
}

.promo-banner-content {
  padding: 30px;
  max-width: 500px;
  position: relative;
  z-index: 1;
}

.promo-banner-title {
  font-size: 2rem;
  margin-bottom: 10px;
  color: var(--lime);
}

.promo-banner-text {
  margin-bottom: 20px;
}

.promo-banner-image {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 50%;
  object-fit: cover;
  opacity: 0.7;
}

/* Desktop Categories */
.desktop-categories {
  display: block;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 30px;
}

.category-card {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  aspect-ratio: 1/1;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.category-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
}

.category-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.category-card:hover .category-image {
  transform: scale(1.05);
}

.category-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  font-weight: bold;
  background: linear-gradient(45deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_3 }});
  color: #1a1a1a;
}

.category-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.category-title {
  color: var(--white);
  font-size: 1.5rem;
  margin-bottom: 5px;
}

.category-count {
  color: var(--lime);
  font-size: 0.9rem;
}

/* Mobile Categories (Instagram Stories Style) */
.mobile-categories {
  display: none;
}

.stories-carousel-container {
  position: relative;
  padding: 10px 0;
}

.stories-carousel {
  display: flex;
  gap: 15px;
  overflow-x: auto;
  padding: 10px 40px;
  scrollbar-width: none;
  -ms-overflow-style: none;
  scroll-behavior: smooth;
}

.stories-carousel::-webkit-scrollbar {
  display: none;
}

.story-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.story-link {
  text-decoration: none;
}

.story-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  padding: 3px;
  background: linear-gradient(45deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
}

.story-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #121212;
}

.story-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  font-weight: bold;
  background-color: #1a1a1a;
  color: var(--white);
  border: 2px solid #121212;
}

.story-title {
  font-size: 0.9rem;
  text-align: center;
  max-width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--white);
}

.stories-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(26, 26, 26, 0.8);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  cursor: pointer;
  z-index: 1;
  transition: all 0.3s ease;
}

.stories-nav:hover {
  background-color: var(--neon-pink);
  color: var(--black);
}

.stories-prev {
  left: 5px;
}

.stories-next {
  right: 5px;
}

.stories-nav:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

@media (max-width: 767px) {
  .desktop-categories {
    display: none;
  }
  
  .mobile-categories {
    display: block;
  }
  
  .story-circle {
    width: 70px;
    height: 70px;
  }
  
  .promo-banner {
    flex-direction: column;
  }
  
  .promo-banner-image {
    position: relative;
    width: 100%;
    height: 200px;
    right: auto;
    top: auto;
  }
  
  .promo-banner-content {
    max-width: 100%;
  }
}

@media (max-width: 480px) {
  .story-circle {
    width: 60px;
    height: 60px;
  }
  
  .stories-carousel {
    padding: 10px 30px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // Stories carousel navigation for mobile
  const storiesCarousel = document.querySelector('.stories-carousel');
  const prevBtn = document.querySelector('.stories-prev');
  const nextBtn = document.querySelector('.stories-next');
  
  if (storiesCarousel && prevBtn && nextBtn) {
    const scrollAmount = 200;
    
    prevBtn.addEventListener('click', () => {
      storiesCarousel.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
    });
    
    nextBtn.addEventListener('click', () => {
      storiesCarousel.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    });
    
    // Update button states
    const updateButtonStates = () => {
      const isAtStart = storiesCarousel.scrollLeft <= 10;
      const isAtEnd = storiesCarousel.scrollLeft + storiesCarousel.clientWidth >= storiesCarousel.scrollWidth - 10;
      
      prevBtn.disabled = isAtStart;
      prevBtn.style.opacity = isAtStart ? '0.5' : '1';
      nextBtn.disabled = isAtEnd;
      nextBtn.style.opacity = isAtEnd ? '0.5' : '1';
    };
    
    storiesCarousel.addEventListener('scroll', updateButtonStates);
    window.addEventListener('resize', updateButtonStates);
    
    // Initial update
    updateButtonStates();
  }
});
{% endjavascript %}
