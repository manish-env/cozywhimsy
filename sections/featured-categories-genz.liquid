{% comment %}
  Gen Z Featured Categories Section
  Inspired by Instagram UI with vibrant colors and modern styling
{% endcomment %}

<section class="categories-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title{% if section.settings.use_gradient_heading %} gradient-text{% endif %}">{{ section.settings.title | escape }}</h2>
      {% if section.settings.subheading != blank %}
        <div class="section-subheading{% if section.settings.use_gradient_subheading %} gradient-text{% endif %}">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_banner %}
      <div class="promo-banner{% if section.settings.show_banner_desktop == false %} desktop-hide-banner{% endif %}{% if section.settings.show_banner_mobile == false %} mobile-hide-banner{% endif %}">
        <div class="promo-banner-content">
          <h3 class="promo-banner-title">{{ section.settings.banner_title }}</h3>
          <p class="promo-banner-text">{{ section.settings.banner_text }}</p>
          {% if section.settings.banner_button_text != blank %}
            <a href="{{ section.settings.banner_button_link }}" class="btn primary-btn">{{ section.settings.banner_button_text }}</a>
          {% endif %}
        </div>
        {% if section.settings.banner_image != blank %}
          <img src="{{ section.settings.banner_image | image_url: width: 1500 }}" alt="{{ section.settings.banner_title }}" class="promo-banner-image">
        {% endif %}
      </div>
    {% endif %}

    <div class="desktop-categories">
      <div class="categories-grid">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            <div class="category-card" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link }}">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.title }}" class="category-image">
                {% else %}
                  <div class="category-placeholder">
                    {{ block.settings.title | slice: 0 | upcase }}
                  </div>
                {% endif %}
                <div class="category-overlay">
                  <h3 class="category-title">{{ block.settings.title }}</h3>
                  {% if block.settings.show_products_count %}
                    <div class="category-count">{{ block.settings.products_count }} Products</div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="mobile-categories">
      <div class="stories-carousel-container">
        <button class="stories-nav stories-prev" aria-label="Previous categories">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        
        <div class="stories-carousel">
          {% for block in section.blocks %}
            {% if block.type == 'category' %}
              <div class="story-item" {{ block.shopify_attributes }}>
                <a href="{{ block.settings.link }}" class="story-link">
                  <div class="story-circle">
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | image_url: width: 150 }}" alt="{{ block.settings.title }}" class="story-image">
                    {% else %}
                      <div class="story-placeholder">
                        {{ block.settings.title | slice: 0 | upcase }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="story-title">{{ block.settings.title }}</div>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <button class="stories-nav stories-next" aria-label="Next categories">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

