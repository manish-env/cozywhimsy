<section class="featured-categories" style="
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  {% if section.settings.mobile_padding_top != blank %}
    --mobile-padding-top: {{ section.settings.mobile_padding_top }}px;
  {% endif %}
  {% if section.settings.mobile_padding_bottom != blank %}
    --mobile-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  {% endif %}
  {% if section.settings.mobile_margin_top != blank %}
    --mobile-margin-top: {{ section.settings.mobile_margin_top }}px;
  {% endif %}
  {% if section.settings.mobile_margin_bottom != blank %}
    --mobile-margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
  {% endif %}
" id="featured-categories-section">
  <div class="container">
    {% if section.settings.show_banner_desktop or section.settings.show_banner_mobile %}
      <div class="category-banner {% if section.settings.show_banner_desktop == false %}desktop-hide-banner{% endif %} {% if section.settings.show_banner_mobile == false %}mobile-hide-banner{% endif %}">
        {% if section.settings.banner_image != blank %}
          <div class="banner-image" style="background-image: url('{{ section.settings.banner_image | img_url: 'master' }}');"></div>
        {% endif %}
        <div class="banner-content">
          {% if section.settings.banner_title != blank %}
            <h2>{{ section.settings.banner_title }}</h2>
          {% endif %}
          {% if section.settings.banner_text != blank %}
            <p>{{ section.settings.banner_text }}</p>
          {% endif %}
          {% if section.settings.banner_button_text != blank and section.settings.banner_button_link != blank %}
            <a href="{{ section.settings.banner_button_link }}" class="banner-button">{{ section.settings.banner_button_text }}</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
    
    <div class="section-header text-{{ section.settings.text_alignment }}">
      {% assign show_title = false %}
      {% if section.settings.show_title_desktop or section.settings.show_title_mobile %}
        {% assign show_title = true %}
      {% endif %}
      
      {% if section.settings.title != blank and show_title %}
        <h2 class="section-title {% if section.settings.show_title_desktop == false %}desktop-hide-title{% endif %} {% if section.settings.show_title_mobile == false %}mobile-hide-title{% endif %}" 
            style="color: {% if section.settings.use_logo_color_heading %}var(--primary-pink, #ff6b9a){% else %}{{ section.settings.heading_color }}{% endif %};">
          {{ section.settings.title | escape }}
        </h2>
      {% endif %}
      
      {% assign show_subtitle = false %}
      {% if section.settings.show_subtitle_desktop or section.settings.show_subtitle_mobile %}
        {% assign show_subtitle = true %}
      {% endif %}
      
      {% if section.settings.subtitle != blank and show_subtitle %}
        <p class="section-subtitle {% if section.settings.show_subtitle_desktop == false %}desktop-hide-subtitle{% endif %} {% if section.settings.show_subtitle_mobile == false %}mobile-hide-subtitle{% endif %}"
           style="color: {% if section.settings.use_logo_color_subheading %}var(--primary-pink, #ff6b9a){% else %}{{ section.settings.subheading_color }}{% endif %};">
         {{ section.settings.subtitle | escape }}
        </p>
      {% endif %}
    </div>
    
    <!-- Circular Category Carousel View -->
    <div class="category-carousel">
      {% if section.blocks.size > 0 %}
        <div class="carousel-container">
          <button class="carousel-nav carousel-prev" aria-label="Previous categories">
            <i class="fas fa-chevron-left"></i>
          </button>
          <div class="carousel-track">
            {% for block in section.blocks %}
              <div class="carousel-item" {{ block.shopify_attributes }}>
                {% if block.settings.collection != blank %}
                  <a href="{{ block.settings.collection.url }}" class="category-card-link">
                    <div class="category-circle">
                      {% if block.settings.image != blank %}
                        <div class="category-img" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');"></div>
                      {% elsif block.settings.collection.image != blank %}
                        <div class="category-img" style="background-image: url('{{ block.settings.collection.image | img_url: 'master' }}');"></div>
                      {% else %}
                        <div class="category-img" style="background-color: {{ block.settings.background_color | default: '#f8e1e8' }};">
                          <span class="category-placeholder">{{ block.settings.title | default: block.settings.collection.title | slice: 0, 1 | upcase }}</span>
                        </div>
                      {% endif %}
                    </div>
                    <div class="category-title">
                      <h3>{{ block.settings.title | default: block.settings.collection.title }}</h3>
                    </div>
                  </a>
                {% else %}
                  <div class="category-circle">
                    <div class="category-img" style="background-color: {{ block.settings.background_color | default: '#f8e1e8' }};">
                      <span class="category-placeholder">{{ block.settings.title | default: "Category" | slice: 0, 1 | upcase }}</span>
                    </div>
                  </div>
                  <div class="category-title">
                    <h3>{{ block.settings.title | default: "Category Name" }}</h3>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
          <button class="carousel-nav carousel-next" aria-label="Next categories">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      {% else %}
        {% comment %} Display placeholder categories if no blocks are added {% endcomment %}
        <div class="carousel-container">
          <button class="carousel-nav carousel-prev" aria-label="Previous categories" disabled>
            <i class="fas fa-chevron-left"></i>
          </button>
          <div class="carousel-track">
            {% for i in (1..6) %}
              <div class="carousel-item">
                <div class="category-circle">
                  <div class="category-img" style="background-color: {% cycle '#f8e1e8', '#f0e6ff', '#f8e1e8', '#f0e6ff', '#f8e1e8', '#f0e6ff' %};">
                    <span class="category-placeholder">{{ i }}</span>
                  </div>
                </div>
                <div class="category-title">
                  <h3>Category {{ i }}</h3>
                </div>
              </div>
            {% endfor %}
          </div>
          <button class="carousel-nav carousel-next" aria-label="Next categories" disabled>
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .featured-categories {
    padding: 30px 0;
    background-color: #fff;
  }
  
  @media screen and (max-width: 767px) {
    .featured-categories {
      padding-top: var(--mobile-padding-top, 20px);
      padding-bottom: var(--mobile-padding-bottom, 16px);
      margin-top: var(--mobile-margin-top, 0);
      margin-bottom: var(--mobile-margin-bottom, 0);
    }
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 30px;
    position: relative;
  }
  
  .section-header:after {
    content: "";
    display: block;
    border-bottom: 1px solid #ff6b9a;
    margin: 20px auto 0;
    width: 120px;
    {% if section.settings.show_separator_desktop == false and section.settings.show_separator_mobile == false %}
      display: none;
    {% endif %}
  }
  
  .section-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #333;
  }
  
  .section-subtitle {
    font-size: 16px;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* Carousel Styles */
  .category-carousel {
    position: relative;
    padding: 20px 0;
    margin: 20px 0;
  }
  
  .carousel-container {
    position: relative;
    overflow: hidden;
    padding: 20px 50px;
  }
  
  .carousel-track {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.25, 1, 0.5, 1);
    gap: 30px;
    padding: 15px 0;
  }
  
  .carousel-item {
    flex: 0 0 auto;
    width: calc(25% - 22.5px);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .category-card-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }
  
  .category-circle {
    background-color: #fff;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 180px;
    height: 180px;
    position: relative;
    padding: 4px;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }
  
  .category-circle:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(255, 107, 154, 0.3);
  }
  
  .category-img {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
    overflow: hidden;
    border-radius: 50%;
    border: 3px solid white;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .category-placeholder {
    font-size: 36px;
    font-weight: 600;
    color: #333;
  }
  
  .category-title {
    padding: 15px;
    text-align: center;
  }
  
  .category-title h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: #333;
    transition: color 0.3s ease;
  }
  
  .category-circle:hover .category-title h3 {
    color: #ff6b9a;
  }
  
  .carousel-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: white;
    border: none;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 5;
    transition: all 0.3s ease;
    color: #333;
    font-size: 14px;
  }
  
  .carousel-prev {
    left: 5px;
  }
  
  .carousel-next {
    right: 5px;
  }
  
  .carousel-nav:hover {
    background-color: #ff6b9a;
    color: white;
    box-shadow: 0 5px 15px rgba(255, 107, 154, 0.3);
  }
  
  .carousel-nav:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    background-color: #f5f5f5;
    color: #999;
    box-shadow: none;
  }
  
  /* Mobile Carousel Styles */
  @media (max-width: 991px) {
    .carousel-item {
      width: calc(33.333% - 15px);
    }
    
    .category-circle {
      width: 140px;
      height: 140px;
    }
  }
  
  @media (max-width: 767px) {
    .category-carousel {
      padding: 10px 0;
      margin: 10px 0;
    }
    
    .carousel-container {
      padding: 5px 35px;
    }
    
    .carousel-item {
      width: calc(100% - 10px);
    }
    
    .category-circle {
      width: 120px;
      height: 120px;
    }
    
    .category-title {
      padding: 12px;
    }
    
    .category-title h3 {
      font-size: 14px;
    }
    
    .carousel-nav {
      width: 32px;
      height: 32px;
      font-size: 12px;
    }
  }
  
  @media (max-width: 374px) {
    .category-circle {
      width: 80px;
      height: 80px;
    }
  }
  
  /* Banner Styles */
  .category-banner {
    margin-bottom: 30px;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    min-height: 200px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
  }
  
  .banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
  }
  
  .banner-content {
    position: relative;
    z-index: 2;
    padding: 30px;
    background: rgba(255, 255, 255, 0.85);
    margin: 20px;
    border-radius: 10px;
    max-width: 500px;
  }
  
  .banner-content h2 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #333;
  }
  
  .banner-content p {
    font-size: 16px;
    color: #666;
    margin-bottom: 15px;
  }
  
  .banner-button {
    display: inline-block;
    padding: 8px 20px;
    background-color: var(--primary-pink, #ff6b9a);
    color: white;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
  }
  
  .banner-button:hover {
    background-color: #e1306c;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(225, 48, 108, 0.3);
  }
  
  /* Title visibility controls */
  @media (min-width: 768px) {
    .desktop-hide-title {
      display: none;
    }
    
    .desktop-hide-subtitle .section-subtitle {
      display: none;
    }
    
    .desktop-hide-banner {
      display: none;
    }
    
    {% if section.settings.show_separator_desktop == false %}
    .section-header:after {
      display: none;
    }
    {% endif %}
  }
  
  @media (max-width: 767px) {
    .desktop-only {
      display: none;
    }
    
    .mobile-only {
      display: block;
    }
    
    .featured-categories {
      padding: 20px 0 15px;
    }
    
    .section-header {
      text-align: center;
      margin-bottom: 10px;
    }
    
    .section-title {
      font-size: 24px;
      margin-bottom: 5px;
    }
    
    .section-subtitle {
      font-size: 14px;
    }
    
    .mobile-hide-title {
      display: none;
    }
    
    .mobile-hide-subtitle .section-subtitle {
      display: none;
    }
    
    .mobile-hide-banner {
      display: none;
    }
    
    {% if section.settings.show_separator_mobile == false %}
    .section-header:after {
      display: none;
    }
    {% endif %}
    
    /* For smaller mobile screens */
    @media (max-width: 374px) {
      .category-circle {
        width: 60px;
        height: 60px;
      }
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    initCarousels();
    
    // Re-initialize on resize
    window.addEventListener('resize', function() {
      initCarousels();
    });
    
    function initCarousels() {
      const carousels = document.querySelectorAll('.category-carousel');
      
      carousels.forEach(function(carousel) {
        // Only initialize visible carousels (based on mobile/desktop)
        if (window.getComputedStyle(carousel).display === 'none') return;
        
        const track = carousel.querySelector('.carousel-track');
        const items = track.querySelectorAll('.carousel-item');
        const prevBtn = carousel.querySelector('.carousel-prev');
        const nextBtn = carousel.querySelector('.carousel-next');
        
        if (items.length === 0) return;
        
        // Set initial state
        let position = 0;
        let itemWidth = items[0].offsetWidth;
        let visibleItems = Math.floor(track.offsetWidth / itemWidth);
        let maxPosition = items.length - visibleItems;
        
        // Disable prev button initially
        prevBtn.disabled = true;
        
        // Update button states
        function updateButtonStates() {
          prevBtn.disabled = position <= 0;
          nextBtn.disabled = position >= maxPosition;
        }
        
        // Move to position
        function moveToPosition() {
          const offset = position * itemWidth;
          track.style.transform = `translateX(-${offset}px)`;
          updateButtonStates();
        }
        
        // Event listeners for buttons
        prevBtn.addEventListener('click', function() {
          if (position > 0) {
            position--;
            moveToPosition();
          }
        });
        
        nextBtn.addEventListener('click', function() {
          if (position < maxPosition) {
            position++;
            moveToPosition();
          }
        });
        
        // Handle touch events for mobile
        let startX, moveX, initialPosition;
        
        track.addEventListener('touchstart', function(e) {
          startX = e.touches[0].clientX;
          initialPosition = position;
          track.style.transition = 'none';
        }, { passive: true });
        
        track.addEventListener('touchmove', function(e) {
          moveX = e.touches[0].clientX;
          const diff = moveX - startX;
          const offset = initialPosition * itemWidth - diff;
          
          // Limit the drag to prevent overscrolling
          if (offset > -itemWidth && offset < (items.length * itemWidth)) {
            track.style.transform = `translateX(-${offset}px)`;
          }
        }, { passive: true });
        
        track.addEventListener('touchend', function() {
          track.style.transition = 'transform 0.5s ease';
          
          if (moveX) {
            const diff = moveX - startX;
            
            // If swiped more than 1/3 of item width
            if (Math.abs(diff) > itemWidth / 3) {
              if (diff > 0 && position > 0) {
                // Swiped right
                position--;
              } else if (diff < 0 && position < maxPosition) {
                // Swiped left
                position++;
              }
            }
            
            moveToPosition();
            moveX = null;
          }
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
          itemWidth = items[0].offsetWidth;
          visibleItems = Math.floor(track.offsetWidth / itemWidth);
          maxPosition = Math.max(0, items.length - visibleItems);
          
          // Reset position if needed
          if (position > maxPosition) {
            position = maxPosition;
          }
          
          moveToPosition();
        });
        
        // Initial setup
        updateButtonStates();
      });
    }
  });
</script>

