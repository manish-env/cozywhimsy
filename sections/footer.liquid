<footer class="site-footer">
  <div class="footer-wave-top">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" preserveAspectRatio="none">
      <path d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z" fill="#fff"></path>
    </svg>
  </div>
  <div class="footer-main">
    <div class="container">
      <div class="footer-content">
        <div class="footer-logo-column">
          <a href="/" class="footer-logo">
            {% if section.settings.footer_logo != blank %}
              <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}">
            {% else %}
              <img src="{{ 'cozzywhimsylogo-removebg.png' | asset_url }}" alt="{{ shop.name }}">
            {% endif %}
          </a>
          <p class="footer-tagline">{{ section.settings.footer_text }}</p>
          <div class="social-links">
            {% if section.settings.instagram_link != blank %}
              <a href="{{ section.settings.instagram_link }}" target="_blank" aria-label="Instagram">
                <div class="social-icon-wrapper">
                  <i class="fab fa-instagram"></i>
                </div>
              </a>
            {% endif %}
            {% if section.settings.pinterest_link != blank %}
              <a href="{{ section.settings.pinterest_link }}" target="_blank" aria-label="Pinterest">
                <div class="social-icon-wrapper">
                  <i class="fab fa-pinterest"></i>
                </div>
              </a>
            {% endif %}
            {% if section.settings.facebook_link != blank %}
              <a href="{{ section.settings.facebook_link }}" target="_blank" aria-label="Facebook">
                <div class="social-icon-wrapper">
                  <i class="fab fa-facebook"></i>
                </div>
              </a>
            {% endif %}
            {% if section.settings.twitter_link != blank %}
              <a href="{{ section.settings.twitter_link }}" target="_blank" aria-label="Twitter">
                <div class="social-icon-wrapper">
                  <i class="fab fa-twitter"></i>
                </div>
              </a>
            {% endif %}
          </div>
          <div class="newsletter-signup">
            <h4>Stay Cozy & Updated</h4>
            <form action="/contact#contact_form" method="post" class="footer-newsletter">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="âœ“">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form-group">
                <input type="email" name="contact[email]" class="newsletter-input" placeholder="Your email" required>
                <button type="submit" class="newsletter-submit">
                  <i class="fas fa-paper-plane"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="footer-links">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'link_list' %}
                <div class="footer-column" {{ block.shopify_attributes }}>
                  <h4>{{ block.settings.title }}</h4>
                  {% assign footer_menu = block.settings.menu %}
                  {% if linklists[footer_menu].links.size > 0 %}
                    <ul class="footer-menu">
                      {% for link in linklists[footer_menu].links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              {% when 'text' %}
                <div class="footer-column" {{ block.shopify_attributes }}>
                  <h4>{{ block.settings.title }}</h4>
                  <div class="footer-text">{{ block.settings.text }}</div>
                </div>
              {% when 'contact' %}
                <div class="footer-column" {{ block.shopify_attributes }}>
                  <h4>{{ block.settings.title }}</h4>
                  <ul class="contact-info">
                    {% if block.settings.email != blank %}
                      <li>
                        <div class="contact-icon">
                          <i class="fas fa-envelope"></i>
                        </div>
                        <span>{{ block.settings.email }}</span>
                      </li>
                    {% endif %}
                    {% if block.settings.phone != blank %}
                      <li>
                        <div class="contact-icon">
                          <i class="fas fa-phone"></i>
                        </div>
                        <span>{{ block.settings.phone }}</span>
                      </li>
                    {% endif %}
                    {% if block.settings.address != blank %}
                      <li>
                        <div class="contact-icon">
                          <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <span>{{ block.settings.address }}</span>
                      </li>
                    {% endif %}
                  </ul>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="container">
      <p>{{ section.settings.copyright_text }}</p>
      <div class="footer-bottom-links">
        {% for link in section.settings.footer_bottom_menu.links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Bringing warmth and whimsy to your everyday life through carefully curated products that inspire joy and comfort."
    },
    {
      "type": "text",
      "id": "instagram_link",
      "label": "Instagram Link"
    },
    {
      "type": "text",
      "id": "pinterest_link",
      "label": "Pinterest Link"
    },
    {
      "type": "text",
      "id": "facebook_link",
      "label": "Facebook Link"
    },
    {
      "type": "text",
      "id": "twitter_link",
      "label": "Twitter Link"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": " 2025 Cozywhimsy. All rights reserved."
    },
    {
      "type": "link_list",
      "id": "footer_bottom_menu",
      "label": "Footer Bottom Menu"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Text column"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share information about your brand with your customers.</p>"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Contact"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email",
          "default": "hello@cozywhimsy.com"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone",
          "default": "+1 (555) 123-4567"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Address",
          "default": "123 Cozy Street, Whimsy Town"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list"
        },
        {
          "type": "text"
        },
        {
          "type": "contact"
        }
      ]
    }
  ]
}
{% endschema %}
