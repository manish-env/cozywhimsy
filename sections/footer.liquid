<footer class="footer-fresh">
  <div class="footer-fresh-container">
    <div class="footer-fresh-inner">
      <!-- Brand Section -->
      <div class="footer-fresh-brand">
        <a href="/" class="footer-fresh-logo">
          <img src="{{ section.settings.footer_logo | default: 'cozzywhimsylogo-removebg.png' | asset_url }}" alt="{{ shop.name }} logo">
        </a>
        <div class="footer-fresh-tagline">{{ section.settings.footer_text | default: 'Whimsical comfort for every day.' }}</div>
      </div>
      
      <!-- Quick Links -->
      <div class="footer-fresh-links">
        <div class="footer-fresh-link-heading">Quick Links</div>
        <ul class="footer-fresh-link-list">
          <li><a href="/collections/all" class="footer-fresh-link">Shop All</a></li>
          <li><a href="/pages/about" class="footer-fresh-link">About Us</a></li>
          <li><a href="/pages/contact" class="footer-fresh-link">Contact</a></li>
          <li><a href="/pages/game" class="footer-fresh-link">Game Tournament</a></li>
          {% if section.settings.footer_bottom_menu != blank %}
            {% for link in linklists[section.settings.footer_bottom_menu].links %}
              <li><a href="{{ link.url }}" class="footer-fresh-link">{{ link.title }}</a></li>
            {% endfor %}
          {% endif %}
        </ul>
      </div>
      
      <!-- Newsletter -->
      {% if section.settings.show_newsletter %}
      <div class="footer-fresh-newsletter">
        <div class="footer-fresh-newsletter-title">{{ section.settings.newsletter_title | default: 'Stay Cozy! Subscribe:' }}</div>
        <p class="footer-fresh-newsletter-text">{{ section.settings.newsletter_text | default: 'Join our cozy community for exclusive updates and offers!' }}</p>
        {% form 'customer', id: 'footer-fresh-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="footer-fresh-newsletter-form">
            <input type="email" name="contact[email]" class="footer-fresh-newsletter-input" placeholder="{{ section.settings.newsletter_placeholder | default: 'Your email address' }}" required aria-label="Email address">
            <button type="submit" class="footer-fresh-newsletter-submit" aria-label="Subscribe">
              <svg width="22" height="22" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 11l18-7-7 18-2.5-6.5L2 11z" fill="#fff"/></svg>
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p class="footer-fresh-news-success">{{ section.settings.newsletter_success_text | default: 'Thanks for subscribing!' }}</p>
          {% endif %}
          {% if form.errors %}
            <p class="footer-fresh-news-error">{{ form.errors.messages['email'] }}</p>
          {% endif %}
        {% endform %}
      </div>
      {% endif %}
      
      <!-- Social & Contact -->
      <div class="footer-fresh-social-contact">
        {% if section.settings.show_social_icons %}
        <div class="footer-fresh-link-heading">{{ section.settings.social_heading | default: 'Connect' }}</div>
        <div class="footer-fresh-socials">
          {% if section.settings.instagram_link != blank %}
            <a href="{{ section.settings.instagram_link }}" class="footer-fresh-social" aria-label="Instagram" target="_blank"><i class="fab fa-instagram"></i></a>
          {% endif %}
          {% if section.settings.facebook_link != blank %}
            <a href="{{ section.settings.facebook_link }}" class="footer-fresh-social" aria-label="Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a>
          {% endif %}
          {% if section.settings.pinterest_link != blank %}
            <a href="{{ section.settings.pinterest_link }}" class="footer-fresh-social" aria-label="Pinterest" target="_blank"><i class="fab fa-pinterest-p"></i></a>
          {% endif %}
          {% if section.settings.tiktok_link != blank %}
            <a href="{{ section.settings.tiktok_link }}" class="footer-fresh-social" aria-label="TikTok" target="_blank"><i class="fab fa-tiktok"></i></a>
          {% endif %}
          {% if section.settings.twitter_link != blank %}
            <a href="{{ section.settings.twitter_link }}" class="footer-fresh-social" aria-label="Twitter" target="_blank"><i class="fab fa-twitter"></i></a>
          {% endif %}
        </div>
        {% endif %}
        <div class="footer-fresh-contact">
          {% if section.blocks contains 'contact' or section.settings.contact_email != blank %}
            <div><i class="fas fa-envelope"></i> <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email | default: 'hello@cozywhimsy.com' }}</a></div>
          {% endif %}
          {% if section.blocks contains 'contact' or section.settings.contact_phone != blank %}
            <div><i class="fas fa-phone-alt"></i> <a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone | default: '+1-555-123-4567' }}</a></div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative SVGs -->
  <svg class="footer-fresh-svg" width="100%" height="80" viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" style="position:absolute;bottom:0;left:0;z-index:1;"><path d="M0,40 Q360,80 720,40 T1440,40 V80 H0 Z" fill="#ffe6f2"/><circle cx="80" cy="60" r="18" fill="#ffb6c1" fill-opacity="0.23"/><circle cx="1360" cy="70" r="12" fill="#b19cd9" fill-opacity="0.19"/></svg>
  
  <div class="footer-fresh-bottom">
    <div class="footer-fresh-bottom-inner">
      <span class="footer-fresh-copyright">&copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: 'CozyWhimsy. All rights reserved.' }}</span>
      {% if section.settings.show_payment_icons %}
      <div class="footer-fresh-payments">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag: class: 'footer-fresh-payment-icon' }}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</footer>


<style>
  /* Custom footer styles to match theme aesthetics */
  .footer-fresh-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }
  
  .footer-fresh {
    position: relative;
    margin-top: 80px;
    font-family: 'Poppins', sans-serif;
  }
  
  .footer-fresh-newsletter-text {
    font-size: 0.9rem;
    color: var(--primary-purple);
    opacity: 0.9;
    margin-bottom: 0.8rem;
    margin-top: 0.3rem;
  }
  
  /* Ensure the footer stays within theme width */
  .footer-fresh-inner {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  /* Add some subtle animations */
  .footer-fresh-link {
    position: relative;
    transition: all 0.3s ease;
  }
  
  .footer-fresh-link:before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 8px;
    width: 0;
    height: 1px;
    background: #fff;
    transition: width 0.3s ease;
  }
  
  .footer-fresh-link:hover:before {
    width: calc(100% - 16px);
  }
  
  /* Enhanced newsletter form */
  .footer-fresh-newsletter {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .footer-fresh-newsletter:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(147, 112, 219, 0.15);
  }
  
  /* Enhanced social icons */
  .footer-fresh-social {
    transition: all 0.3s ease;
  }
  
  .footer-fresh-social:hover {
    transform: translateY(-3px) rotate(-6deg);
    box-shadow: 0 4px 12px rgba(255, 107, 154, 0.2);
  }
  
  /* Responsive improvements */
  @media (max-width: 1100px) {
    .footer-fresh-container {
      padding: 0 20px;
    }
  }
  
  @media (max-width: 600px) {
    .footer-fresh {
      margin-top: 60px;
      border-top-left-radius: 1.8rem;
      border-top-right-radius: 1.8rem;
    }
    
    .footer-fresh-newsletter {
      padding: 0.9rem 0.9rem 0.7rem 0.9rem;
    }
  }
  
  .contact-icon {
    color: var(--primary-pink);
    margin-right: 8px;
    font-size: 0.8rem;
    width: 14px;
  }
  
  .contact-text {
    color: var(--dark-text);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.8rem;
  }
  
  a.contact-text:hover {
    color: var(--primary-pink);
  }
  
  .footer-image {
    margin-bottom: 10px;
    border-radius: var(--border-radius-sm);
    overflow: hidden;
    box-shadow: 0 3px 8px rgba(0,0,0,0.05);
  }
  
  .footer-image img {
    display: block;
    width: 100%;
    height: auto;
    transition: all 0.5s ease;
  }
  
  .footer-image:hover img {
    transform: scale(1.05);
  }
  
  .footer-connect {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .newsletter-signup {
    margin-bottom: 10px;
  }
  
  .newsletter-text {
    margin-bottom: 10px;
    font-size: 0.8rem;
    line-height: 1.4;
    color: var(--dark-text);
  }
  
  .newsletter-form {
    display: flex;
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }
  
  .newsletter-input {
    width: 100%;
    padding: 8px 40px 8px 15px;
    border: 1px solid var(--medium-gray);
    border-radius: 20px;
    font-size: 0.8rem;
    background-color: var(--white);
    color: var(--dark-text);
    font-family: inherit;
  }
  
  .newsletter-input::placeholder {
    color: var(--light-text);
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: var(--primary-pink);
    box-shadow: 0 0 0 2px rgba(255, 107, 154, 0.1);
  }
  
  .newsletter-submit {
    position: absolute;
    right: 3px;
    top: 50%;
    transform: translateY(-50%);
    background: var(--primary-pink);
    color: white;
    border: none;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .newsletter-submit:hover {
    background: var(--primary-purple);
    transform: translateY(-50%) scale(1.05);
  }
  
  .newsletter-success {
    color: #4caf50;
    margin-top: 6px;
    font-size: 0.75rem;
  }
  
  .newsletter-error {
    color: #f44336;
    margin-top: 6px;
    font-size: 0.75rem;
  }
  
  .social-links-container {
    margin-top: 5px;
  }
  
  .social-links {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--white);
    color: var(--primary-pink);
    transition: all 0.3s ease;
    font-size: 0.9rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }
  
  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
  }
  
  .social-link.instagram:hover {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
  }
  
  .social-link.pinterest:hover {
    background: #E60023;
    color: white;
  }
  
  .social-link.facebook:hover {
    background: #3b5998;
    color: white;
  }
  
  .social-link.twitter:hover {
    background: #1DA1F2;
    color: white;
  }
  
  .social-link.tiktok:hover {
    background: #000;
    color: white;
  }
  
  .footer-bottom {
    background-color: var(--white);
    padding: 12px 0;
    border-top: 1px solid rgba(0,0,0,0.05);
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .copyright {
    margin: 0;
    font-size: 0.75rem;
    color: var(--light-text);
  }
  
  .footer-bottom-links {
    display: flex;
    gap: 15px;
  }
  
  .footer-bottom-link {
    color: var(--light-text);
    text-decoration: none;
    font-size: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .footer-bottom-link:hover {
    color: var(--primary-pink);
  }
  
  .payment-icons {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  
  .payment-icon {
    width: 38px;
    height: auto;
    margin: 0 5px;
  }
  
  .footer-game-link {
    position: relative;
    font-weight: 600;
    color: #ff6b9a;
    padding-left: 22px;
  }
  
  .footer-game-link::before {
    content: "🎮";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    font-size: 16px;
  }
  
  @media (max-width: 991px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
    }
    
    .footer-connect {
      grid-column: span 2;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
  }
  
  @media (max-width: 767px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
    
    .footer-nav {
      grid-template-columns: 1fr 1fr;
    }
    
    .footer-connect {
      grid-column: span 1;
      display: flex;
      flex-direction: column;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-bottom-links {
      justify-content: center;
    }
    
    .payment-icons {
      justify-content: center;
    }
  }
</style>

