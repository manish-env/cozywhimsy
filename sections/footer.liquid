<footer>
  <div class="footer-main">
    <div class="container">
      <div class="footer-content">
        <div class="footer-logo">
          <a href="/" class="logo">
            {% if section.settings.footer_logo != blank %}
              <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}">
            {% else %}
              <img src="{{ 'cozzywhimsylogo-removebg.png' | asset_url }}" alt="{{ shop.name }}">
            {% endif %}
          </a>
          <p>{{ section.settings.footer_text }}</p>
          <div class="social-links">
            {% if section.settings.instagram_link != blank %}
              <a href="{{ section.settings.instagram_link }}" target="_blank"><i class="fab fa-instagram"></i></a>
            {% endif %}
            {% if section.settings.pinterest_link != blank %}
              <a href="{{ section.settings.pinterest_link }}" target="_blank"><i class="fab fa-pinterest"></i></a>
            {% endif %}
            {% if section.settings.facebook_link != blank %}
              <a href="{{ section.settings.facebook_link }}" target="_blank"><i class="fab fa-facebook"></i></a>
            {% endif %}
            {% if section.settings.twitter_link != blank %}
              <a href="{{ section.settings.twitter_link }}" target="_blank"><i class="fab fa-twitter"></i></a>
            {% endif %}
          </div>
        </div>
        <div class="footer-links">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'link_list' %}
                <div class="footer-column">
                  <h4>{{ block.settings.title }}</h4>
                  {% assign footer_menu = block.settings.menu %}
                  {% if linklists[footer_menu].links.size > 0 %}
                    <ul>
                      {% for link in linklists[footer_menu].links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              {% when 'text' %}
                <div class="footer-column">
                  <h4>{{ block.settings.title }}</h4>
                  <div class="rte">{{ block.settings.text }}</div>
                </div>
              {% when 'contact' %}
                <div class="footer-column">
                  <h4>{{ block.settings.title }}</h4>
                  <ul class="contact-info">
                    {% if block.settings.email != blank %}
                      <li><i class="fas fa-envelope"></i> {{ block.settings.email }}</li>
                    {% endif %}
                    {% if block.settings.phone != blank %}
                      <li><i class="fas fa-phone"></i> {{ block.settings.phone }}</li>
                    {% endif %}
                    {% if block.settings.address != blank %}
                      <li><i class="fas fa-map-marker-alt"></i> {{ block.settings.address }}</li>
                    {% endif %}
                  </ul>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="container">
      <p>{{ section.settings.copyright_text }}</p>
      <div class="footer-bottom-links">
        {% for link in section.settings.footer_bottom_menu.links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

