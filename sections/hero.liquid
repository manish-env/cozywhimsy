<section class="hero {% if section.settings.mobile_hero_style == 'carousel' %}mobile-carousel-style{% elsif section.settings.mobile_hero_style == 'static' %}mobile-static-style{% elsif section.settings.mobile_hero_style == 'hidden' %}mobile-hidden-style{% endif %}">
  <div class="hero-wrapper">
    <div class="hero-content">
      <h1>{{ section.settings.heading | escape }}</h1>
      <p>{{ section.settings.subheading | escape }}</p>
      <div class="hero-buttons">
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn primary-btn">{{ section.settings.button_text }}</a>
        {% endif %}
        {% if section.settings.secondary_button_link != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn secondary-btn">{{ section.settings.secondary_button_text }}</a>
        {% endif %}
      </div>
    </div>
    
    <div class="hero-images">
      <div class="hero-image primary">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
        {% else %}
          <div class="placeholder-image"></div>
        {% endif %}
        <div class="image-overlay">
          <div class="overlay-content">
            <h3>{{ section.settings.primary_caption | default: 'New Arrivals' }}</h3>
            {% if section.settings.button_link != blank %}
              <a href="{{ section.settings.button_link }}" class="overlay-btn">{{ section.settings.button_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="hero-image secondary">
        {% if section.settings.secondary_image != blank %}
          <img src="{{ section.settings.secondary_image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
        {% else %}
          <div class="placeholder-image"></div>
        {% endif %}
        <div class="image-overlay">
          <div class="overlay-content">
            <h3>{{ section.settings.secondary_caption | default: 'Featured Collection' }}</h3>
            {% if section.settings.secondary_button_link != blank %}
              <a href="{{ section.settings.secondary_button_link }}" class="overlay-btn">{{ section.settings.secondary_button_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Mobile Carousel -->
  {% if section.settings.mobile_hero_style != 'hidden' %}
  <div class="mobile-hero-carousel {% if section.settings.mobile_hero_style == 'static' %}static-mobile-banner{% endif %}">
    <div class="swiper mobile-hero-swiper">
      <div class="swiper-wrapper">
        <!-- First Slide -->
        <div class="swiper-slide">
          <div class="mobile-slide-bg">
            {% if section.settings.image != blank %}
              <img 
                src="{{ section.settings.image | img_url: section.settings.mobile_image_size | default: 'master' }}" 
                alt="{{ section.settings.heading }}"
                {% if section.settings.mobile_image_position != blank %}
                  style="object-position: {{ section.settings.mobile_image_position }};"
                {% endif %}
              >
            {% else %}
              <div class="placeholder-image"></div>
            {% endif %}
            <div class="mobile-overlay" style="opacity: {{ section.settings.mobile_overlay_opacity | divided_by: 100.0 }}"></div>
          </div>
        </div>
        
        <!-- Second Slide -->
        <div class="swiper-slide">
          <div class="mobile-slide-bg">
            {% if section.settings.secondary_image != blank %}
              <img 
                src="{{ section.settings.secondary_image | img_url: section.settings.mobile_image_size | default: 'master' }}" 
                alt="{{ section.settings.heading }}"
                {% if section.settings.mobile_image_position != blank %}
                  style="object-position: {{ section.settings.mobile_image_position }};"
                {% endif %}
              >
            {% else %}
              <div class="placeholder-image"></div>
            {% endif %}
            <div class="mobile-overlay" style="opacity: {{ section.settings.mobile_overlay_opacity | divided_by: 100.0 }}"></div>
          </div>
        </div>
        
        <!-- Additional slides from section settings -->
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <div class="swiper-slide">
              <div class="mobile-slide-bg">
                {% if block.settings.slide_image != blank %}
                  <img 
                    src="{{ block.settings.slide_image | img_url: section.settings.mobile_image_size | default: 'master' }}" 
                    alt="{{ block.settings.slide_caption }}"
                    {% if section.settings.mobile_image_position != blank %}
                      style="object-position: {{ section.settings.mobile_image_position }};"
                    {% endif %}
                  >
                {% else %}
                  <div class="placeholder-image"></div>
                {% endif %}
                <div class="mobile-overlay" style="opacity: {{ section.settings.mobile_overlay_opacity | divided_by: 100.0 }}"></div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <!-- Pagination dots -->
      <div class="swiper-pagination"></div>
    </div>
  </div>
  {% endif %}
</section>

<style>
.hero {
  width: 100%;
  background-color: #fff;
  padding: 40px 0;
  position: relative;
}

.hero-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  align-items: center;
  gap: 30px;
  position: relative;
  z-index: 2;
}

.hero-content {
  flex: 1;
  padding-right: 20px;
}

.hero-content h1 {
  font-size: 42px;
  margin-bottom: 16px;
  color: #333;
  font-family: 'Quicksand', sans-serif;
  font-weight: 700;
  line-height: 1.2;
}

.hero-content p {
  font-size: 16px;
  margin-bottom: 24px;
  color: #666;
  line-height: 1.6;
}

.hero-buttons {
  display: flex;
  gap: 12px;
}

.btn {
  padding: 12px 24px;
  border-radius: 30px;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.3s ease;
  font-family: 'Quicksand', sans-serif;
}

.primary-btn {
  background-color: #e1306c;
  color: white;
}

.primary-btn:hover {
  background-color: #d62f68;
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(225, 48, 108, 0.3);
}

.secondary-btn {
  background-color: transparent;
  color: #333;
  border: 1px solid #333;
}

.secondary-btn:hover {
  background-color: #f5f5f5;
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Desktop Hero Images */
.hero-images {
  flex: 1.2;
  display: flex;
  gap: 20px;
}

.hero-image {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.hero-image.primary {
  flex: 3;
  height: 400px;
}

.hero-image.secondary {
  flex: 2;
  height: 400px;
}

.hero-image:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.hero-image:hover img {
  transform: scale(1.05);
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 25px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.hero-image:hover .image-overlay {
  opacity: 1;
}

.overlay-content {
  transform: translateY(20px);
  transition: transform 0.3s ease;
}

.hero-image:hover .overlay-content {
  transform: translateY(0);
}

.overlay-content h3 {
  color: white;
  margin-bottom: 12px;
  font-size: 20px;
  font-family: 'Quicksand', sans-serif;
  font-weight: 600;
}

.overlay-btn {
  display: inline-block;
  padding: 8px 20px;
  background-color: #e1306c;
  color: white;
  border-radius: 30px;
  text-decoration: none;
  font-size: 14px;
  transition: all 0.3s ease;
  font-family: 'Quicksand', sans-serif;
}

.overlay-btn:hover {
  background-color: #d62f68;
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.placeholder-image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-image:after {
  content: 'Image';
  color: #999;
  font-size: 16px;
  font-family: 'Quicksand', sans-serif;
}

/* Mobile Carousel Styles */
.mobile-hero-carousel {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.mobile-hero-carousel.static-mobile-banner .swiper-wrapper {
  display: flex;
}

.mobile-hero-carousel.static-mobile-banner .swiper-slide {
  width: 100% !important;
}

.mobile-hero-carousel.static-mobile-banner .swiper-pagination {
  display: none;
}

.mobile-slide-bg {
  position: relative;
  width: 100%;
  height: 100%;
}

.mobile-slide-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.mobile-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1;
}

/* Mobile Styles */
@media screen and (max-width: 991px) {
  .hero {
    min-height: 500px;
    display: flex;
    align-items: center;
  }
  
  .hero-wrapper {
    flex-direction: column;
    padding: 20px 15px;
    gap: 20px;
  }
  
  .hero-content {
    width: 100%;
    padding-right: 0;
    text-align: center;
    margin-bottom: 20px;
    position: relative;
    z-index: 2;
  }
  
  .hero-buttons {
    justify-content: center;
  }
  
  .hero-images {
    display: none;
  }
  
  .mobile-hero-carousel {
    display: block;
  }
  
  .mobile-hero-swiper {
    width: 100%;
    height: 100%;
  }
  
  /* Handle hidden mobile hero style */
  .hero.mobile-hidden-style {
    min-height: auto;
    padding: 40px 0;
    background-color: {{ section.settings.mobile_fallback_bg | default: '#f8f8f8' }};
  }
  
  .hero.mobile-hidden-style .hero-content h1,
  .hero.mobile-hidden-style .hero-content p {
    color: #333;
    text-shadow: none;
  }
  
  .hero.mobile-hidden-style .secondary-btn {
    color: #333;
    border-color: #333;
  }
}

@media screen and (max-width: 767px) {
  .hero {
    padding: 0;
    min-height: {{ section.settings.mobile_banner_height | default: 450 }}px;
  }
  
  .hero-wrapper {
    padding: 30px 15px;
  }
  
  .hero-content h1 {
    font-size: 28px;
    margin-bottom: 12px;
    color: #fff;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }
  
  .hero-content p {
    font-size: 15px;
    margin-bottom: 20px;
    padding: 0 10px;
    color: #f0f0f0;
  }
  
  .mobile-overlay {
    background: rgba(0, 0, 0, 0.65);
  }
  
  .secondary-btn {
    background-color: transparent;
    color: #fff;
    border: 1px solid #fff;
  }
  
  .secondary-btn:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  /* Handle hidden mobile hero style */
  .hero.mobile-hidden-style {
    min-height: auto;
    padding: 30px 0;
  }
}

@media screen and (max-width: 479px) {
  .hero {
    min-height: 400px;
  }
  
  .hero-content h1 {
    font-size: 24px;
    line-height: 1.3;
  }
  
  .hero-content p {
    font-size: 14px;
    line-height: 1.5;
  }
  
  .hero-buttons {
    flex-direction: column;
    gap: 10px;
    width: 100%;
    max-width: 280px;
    margin: 0 auto;
  }
  
  .btn {
    width: 100%;
    text-align: center;
    padding: 10px 15px;
  }
  
  .mobile-overlay {
    background: rgba(0, 0, 0, 0.7);
  }
}

/* Add this for better touch experience on mobile */
@media (hover: none) {
  .hero-image .image-overlay {
    opacity: 1;
  }
  
  .hero-image .overlay-content {
    transform: translateY(0);
  }
  
  .hero-image:hover {
    transform: none;
  }
  
  .hero-image:hover img {
    transform: none;
  }
}
</style>

<!-- Initialize Swiper for Mobile -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile Swiper - Only initialize if not using static style
    if (!document.querySelector('.mobile-hero-carousel.static-mobile-banner')) {
      const mobileHeroSwiper = new Swiper('.mobile-hero-swiper', {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        autoplay: {
          delay: {{ section.settings.mobile_slide_delay | default: 5000 }},
          disableOnInteraction: false,
        },
        pagination: {
          el: '.mobile-hero-swiper .swiper-pagination',
          clickable: true,
        },
      });
    }
  });
</script>

