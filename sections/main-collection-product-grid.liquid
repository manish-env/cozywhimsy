<div class="collection-product-grid" 
     style="background-color: {{ section.settings.section_bg_color }}; padding-top: {{ section.settings.section_padding_top }}px; padding-bottom: {{ section.settings.section_padding_bottom }}px;"
     data-show-banner-mobile="{{ section.settings.show_banner_on_mobile }}">
  <div class="container product-container" style="max-width: {{ section.settings.grid_max_width }}px;">
    <div class="collection-toolbar">
      {% if section.settings.enable_filtering %}
        <div class="collection-filters">
          <button class="filter-button" aria-expanded="false" aria-controls="FilterDrawer">
            <i class="fas fa-sliders-h"></i> <span>Filter</span>
          </button>
          
          <div id="FilterDrawer" class="filter-drawer {% if section.settings.filter_type == 'drawer' %}filter-drawer-style{% endif %}">
            <div class="filter-drawer-header">
              <h3>Filter Products</h3>
              <button class="close-filter" aria-label="Close filters">
                <i class="fas fa-times"></i>
              </button>
            </div>
            
            <div class="filter-form">
              <form id="FilterForm" class="facets-form">
                {%- for filter in collection.filters -%}
                  <div class="filter-group">
                    <details class="filter-details">
                      <summary class="filter-title">
                        <div>{{ filter.label }}</div>
                        <span class="icon-toggle">
                          <i class="fas fa-chevron-down"></i>
                        </span>
                      </summary>
                      <div class="filter-content">
                        {%- case filter.type -%}
                          {%- when 'boolean' or 'list' -%}
                            <ul class="filter-options">
                              {%- for filter_value in filter.values -%}
                                <li class="filter-option">
                                  <label class="filter-label">
                                    <input type="checkbox" 
                                           name="{{ filter_value.param_name }}" 
                                           value="{{ filter_value.value }}" 
                                           {% if filter_value.active %}checked{% endif %} 
                                           {% if filter_value.count == 0 and filter_value.active == false %}disabled{% endif %}>
                                    <span class="checkbox-custom"></span>
                                    <span class="filter-text">{{ filter_value.label }}</span>
                                    <span class="filter-count">({{ filter_value.count }})</span>
                                  </label>
                                </li>
                              {%- endfor -%}
                            </ul>
                          {%- when 'price_range' -%}
                            <div class="price-range">
                              <div class="price-inputs">
                                <div class="field">
                                  <label for="price-min">From</label>
                                  <input type="number" name="{{ filter.min_value.param_name }}" id="price-min" value="{{ filter.min_value.value }}" placeholder="{{ filter.range_min | money_without_currency }}">
                                </div>
                                <div class="field">
                                  <label for="price-max">To</label>
                                  <input type="number" name="{{ filter.max_value.param_name }}" id="price-max" value="{{ filter.max_value.value }}" placeholder="{{ filter.range_max | money_without_currency }}">
                                </div>
                              </div>
                            </div>
                        {%- endcase -%}
                      </div>
                    </details>
                  </div>
                {%- endfor -%}
                
                <div class="filter-actions">
                  <button type="submit" class="apply-filters">Apply Filters</button>
                  <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}" class="clear-filters">Clear All</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.enable_sorting %}
        <div class="collection-sort">
          <label for="SortBy" class="sort-label">Sort by:</label>
          <div class="select-wrapper">
            <select id="SortBy" class="sort-by">
              <option value="manual" {% if collection.sort_by == 'manual' %}selected{% endif %}>Featured</option>
              <option value="best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best Selling</option>
              <option value="title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>Alphabetically, A-Z</option>
              <option value="title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>Alphabetically, Z-A</option>
              <option value="price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price, low to high</option>
              <option value="price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price, high to low</option>
              <option value="created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Date, new to old</option>
              <option value="created-ascending" {% if collection.sort_by == 'created-ascending' %}selected{% endif %}>Date, old to new</option>
            </select>
            <span class="select-icon">
              <i class="fas fa-chevron-down"></i>
            </span>
          </div>
        </div>
      {% endif %}
      
      <div class="view-options">
        <button class="view-option grid-view active" aria-label="Grid view">
          <i class="fas fa-th"></i>
        </button>
        <button class="view-option list-view" aria-label="List view">
          <i class="fas fa-list"></i>
        </button>
      </div>
    </div>
    
    <!-- Mobile Filter/Sort Bar -->
    <div class="mobile-filter-sort-bar">
      {% if section.settings.enable_filtering %}
        <button class="mobile-filter-button" aria-expanded="false" aria-controls="FilterDrawer">
          <i class="fas fa-sliders-h"></i> <span>Filter</span>
        </button>
      {% endif %}
      
      {% if section.settings.enable_sorting %}
        <button class="mobile-sort-button" aria-expanded="false" aria-controls="SortDrawer">
          <i class="fas fa-sort"></i> <span>Sort</span>
        </button>
      {% endif %}
    </div>
    
    <!-- Mobile Sort Drawer -->
    <div id="SortDrawer" class="sort-drawer">
      <div class="drawer-header">
        <h3>Sort Products</h3>
        <button class="close-sort" aria-label="Close sort options">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="sort-options">
        <ul>
          <li><button class="sort-option {% if collection.sort_by == 'manual' %}active{% endif %}" data-value="manual">Featured</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'best-selling' %}active{% endif %}" data-value="best-selling">Best Selling</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'title-ascending' %}active{% endif %}" data-value="title-ascending">Alphabetically, A-Z</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'title-descending' %}active{% endif %}" data-value="title-descending">Alphabetically, Z-A</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'price-ascending' %}active{% endif %}" data-value="price-ascending">Price, low to high</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'price-descending' %}active{% endif %}" data-value="price-descending">Price, high to low</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'created-descending' %}active{% endif %}" data-value="created-descending">Date, new to old</button></li>
          <li><button class="sort-option {% if collection.sort_by == 'created-ascending' %}active{% endif %}" data-value="created-ascending">Date, old to new</button></li>
        </ul>
      </div>
    </div>
    
    <div class="product-count" {% if section.settings.hide_product_count %}style="display: none;"{% endif %}>
      <p style="font-size: {{ section.settings.product_count_size }}px; color: {{ section.settings.product_count_color }}; text-align: {{ section.settings.product_count_alignment }};">{{ collection.products_count }} products</p>
    </div>
    
    {% if collection.current_vendor or collection.current_type %}
      <div class="active-filters">
        <span class="active-filters-title">Active filters:</span>
        <ul class="active-filters-list">
          {% if collection.current_vendor %}
            <li class="active-filter-item">
              <span>Vendor: {{ collection.current_vendor }}</span>
              <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}" class="active-filter-remove">
                <i class="fas fa-times"></i>
              </a>
            </li>
          {% endif %}
          {% if collection.current_type %}
            <li class="active-filter-item">
              <span>Type: {{ collection.current_type }}</span>
              <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}" class="active-filter-remove">
                <i class="fas fa-times"></i>
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    {% endif %}
    
    <div class="product-grid" 
         style="grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr); gap: {{ section.settings.grid_gap }}px;"
         data-columns-desktop="{{ section.settings.columns_desktop }}" 
         data-columns-mobile="{{ section.settings.columns_mobile }}">
      {% paginate collection.products by section.settings.products_per_page %}
        {% for product in collection.products %}
          <div class="product-card" 
               data-product-id="{{ product.id }}"
               {% if section.settings.enable_card_hover %}data-hover-effect="true"{% endif %}>
            <div class="product-card-inner">
              <a href="{{ product.url }}" class="product-link">
                <div class="product-image-container" style="--image-ratio: {{ section.settings.image_ratio }};">
                  {% if product.featured_image != blank %}
                    <img 
                      src="{{ product.featured_image | img_url: section.settings.image_size }}" 
                      alt="{{ product.featured_image.alt | escape }}" 
                      class="product-image"
                      loading="lazy"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}">
                    
                    {% if section.settings.show_secondary_image and product.images[1] != blank %}
                      <img 
                        src="{{ product.images[1] | img_url: section.settings.image_size }}" 
                        alt="{{ product.images[1].alt | escape }}" 
                        class="product-image-hover"
                        loading="lazy"
                        width="{{ product.images[1].width }}"
                        height="{{ product.images[1].height }}">
                    {% endif %}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg product-image' }}
                  {% endif %}
                  
                  {% if section.settings.show_badges %}
                    <div class="product-badges">
                      {% if section.settings.show_sale_badge and product.compare_at_price > product.price %}
                        <span class="badge sale-badge">{{ section.settings.sale_badge_text }}</span>
                      {% endif %}
                      
                      {% if section.settings.show_sold_out_badge and product.available == false %}
                        <span class="badge sold-out-badge">{{ section.settings.sold_out_badge_text }}</span>
                      {% endif %}
                      
                      {% if section.settings.show_new_badge %}
                        {% assign days_limit = section.settings.new_badge_days | times: 86400 %}
                        {% assign date_created = product.created_at | date: '%s' | plus: 0 %}
                        {% assign date_now = 'now' | date: '%s' | plus: 0 %}
                        {% assign date_limit = date_created | plus: days_limit %}
                        {% if date_now < date_limit %}
                          <span class="badge new-badge">{{ section.settings.new_badge_text }}</span>
                        {% endif %}
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  {% if section.settings.show_quick_view %}
                    <button class="quick-view" data-product-id="{{ product.id }}" aria-label="Quick view {{ product.title }}">
                      <i class="fas fa-eye"></i> Quick View
                    </button>
                  {% endif %}
                </div>
                
                <div class="product-info" style="text-align: {{ section.settings.text_alignment }}; padding: {{ section.settings.card_padding }}px;">
                  {% if section.settings.show_vendor %}
                    <div class="product-vendor" style="color: var(--{{ section.settings.vendor_color }}, #666666);">
                      {{ product.vendor }}
                    </div>
                  {% endif %}
                  
                  <h3 class="product-title" style="font-size: {{ section.settings.title_size }}px; font-weight: {{ section.settings.title_weight }};">
                    {{ product.title }}
                  </h3>
                  
                  {% if section.settings.show_price %}
                    <div class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="sale-price" style="color: var(--{{ section.settings.sale_price_color }}, #ff6b9a);">{{ product.price | money }}</span>
                        <span class="compare-price" style="color: var(--{{ section.settings.compare_price_color }}, #999999);">{{ product.compare_at_price | money }}</span>
                      {% else %}
                        <span class="regular-price" style="color: var(--{{ section.settings.regular_price_color }}, #333333);">{{ product.price | money }}</span>
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  {% if section.settings.show_rating and product.metafields.reviews.rating %}
                    <div class="product-rating">
                      <span class="stars" style="--rating: {{ product.metafields.reviews.rating.value }}; --star-color: var(--{{ section.settings.star_color }}, #ffc107);">★★★★★</span>
                      <span class="rating-count">({{ product.metafields.reviews.rating_count }})</span>
                    </div>
                  {% endif %}
                  
                  {% if section.settings.show_description and product.description != blank %}
                    <div class="product-description">
                      {{ product.description | strip_html | truncatewords: section.settings.description_words }}
                    </div>
                  {% endif %}
                </div>
              </a>
              
              {% if section.settings.show_add_to_cart %}
                <div class="product-actions" style="padding: {{ section.settings.button_padding }}px;">
                  <button type="button" 
                          class="add-to-cart-button js-add-to-cart-button" 
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                          {% unless product.available %}disabled{% endunless %}
                          style="font-family: var(--font-heading-family, 'Poppins', sans-serif);
                          letter-spacing: 0.05em;
                          text-transform: uppercase;
                          font-size: 14px;
                          font-weight: 500;
                          padding: 10px 20px;
                          width: 100%;
                          border: none;
                          transition: all 0.3s ease;
                          border-radius: {{ section.settings.add_to_cart_button_radius }}px;
                          background-color: {{ section.settings.button_bg_color }};
                          color: {{ section.settings.button_text_color }};">
                    {% if product.available %}{{ section.settings.add_to_cart_text }}{% else %}{{ section.settings.sold_out_text }}{% endif %}
                  </button>
                </div>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="empty-collection">
            <p>No products found in this collection</p>
          </div>
        {% endfor %}
        
        {% if paginate.pages > 1 %}
          <div class="pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</div>

<style>
  .collection-product-grid {
    width: 100%;
  }
  
  .product-container {
    margin: 0 auto;
  }
  
  .collection-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    flex-wrap: wrap;
    gap: 15px;
    padding: 15px 20px;
    background-color: var(--light-gray, #f8f8f8);
    border-radius: var(--border-radius, 10px);
  }
  
  .collection-filters {
    position: relative;
  }
  
  .filter-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    background: var(--white, #ffffff);
    color: var(--dark-text, #333333);
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }
  
  .filter-button:hover {
    background: var(--light-pink, #fff0f5);
    color: var(--primary-pink, #ff6b9a);
    border-color: var(--primary-pink, #ff6b9a);
  }
  
  .filter-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    max-width: 350px;
    background: var(--white, #ffffff);
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    overflow-y: auto;
    box-shadow: 0 0 20px rgba(0,0,0,0.15);
    padding: 20px;
  }
  
  .filter-drawer.active {
    transform: translateX(0);
  }
  
  .filter-drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--medium-gray, #eaeaea);
  }
  
  .filter-drawer-header h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    color: var(--dark-text, #333333);
  }
  
  .close-filter {
    background: transparent;
    border: none;
    color: var(--dark-text, #333333);
    font-size: 18px;
    cursor: pointer;
    padding: 5px;
    transition: all 0.3s ease;
  }
  
  .close-filter:hover {
    color: var(--primary-pink, #ff6b9a);
  }
  
  .filter-group {
    margin-bottom: 15px;
  }
  
  .filter-details {
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    overflow: hidden;
  }
  
  .filter-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    cursor: pointer;
    background-color: var(--light-gray, #f8f8f8);
    transition: all 0.3s ease;
  }
  
  .filter-title:hover {
    background-color: var(--light-pink, #fff0f5);
  }
  
  .filter-title div {
    font-weight: 500;
    color: var(--dark-text, #333333);
  }
  
  .icon-toggle {
    transition: transform 0.3s ease;
  }
  
  details[open] .icon-toggle {
    transform: rotate(180deg);
  }
  
  .filter-content {
    padding: 15px;
    background-color: var(--white, #ffffff);
  }
  
  .filter-options {
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: 250px;
    overflow-y: auto;
  }
  
  .filter-option {
    margin-bottom: 10px;
  }
  
  .filter-label {
    display: flex;
    align-items: center;
    cursor: pointer;
  }
  
  .filter-label input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }
  
  .checkbox-custom {
    position: relative;
    display: inline-block;
    width: 18px;
    height: 18px;
    background-color: var(--white, #ffffff);
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: 3px;
    margin-right: 10px;
    transition: all 0.3s ease;
  }
  
  .filter-label input[type="checkbox"]:checked ~ .checkbox-custom {
    background-color: var(--primary-pink, #ff6b9a);
    border-color: var(--primary-pink, #ff6b9a);
  }
  
  .filter-label input[type="checkbox"]:checked ~ .checkbox-custom:after {
    content: '';
    position: absolute;
    left: 6px;
    top: 2px;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }
  
  .filter-text {
    flex-grow: 1;
    font-size: 14px;
    color: var(--dark-text, #333333);
  }
  
  .filter-count {
    font-size: 12px;
    color: var(--light-text, #666666);
  }
  
  .price-range {
    padding: 10px 0;
  }
  
  .price-inputs {
    display: flex;
    gap: 10px;
  }
  
  .price-inputs .field {
    flex: 1;
  }
  
  .price-inputs label {
    display: block;
    margin-bottom: 5px;
    font-size: 14px;
    color: var(--dark-text, #333333);
  }
  
  .price-inputs input {
    width: 100%;
    padding: 8px 10px;
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    font-size: 14px;
  }
  
  .filter-actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }
  
  .apply-filters {
    flex: 1;
    padding: 10px;
    background-color: var(--primary-pink, #ff6b9a);
    color: white;
    border: none;
    border-radius: var(--border-radius-sm, 6px);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .apply-filters:hover {
    background-color: var(--primary-purple, #9370db);
  }
  
  .clear-filters {
    padding: 10px;
    background-color: transparent;
    color: var(--dark-text, #333333);
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    font-weight: 500;
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
  }
  
  .clear-filters:hover {
    background-color: var(--light-gray, #f8f8f8);
  }
  
  .collection-sort {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .collection-sort label {
    font-size: 14px;
    color: var(--dark-text, #333333);
    font-weight: 500;
  }
  
  .select-wrapper {
    position: relative;
  }
  
  .sort-by {
    padding: 10px 35px 10px 15px;
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    background-color: var(--white, #ffffff);
    font-size: 14px;
    color: var(--dark-text, #333333);
    appearance: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .sort-by:hover {
    border-color: var(--primary-pink, #ff6b9a);
  }
  
  .select-icon {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: var(--dark-text, #333333);
  }
  
  .view-options {
    display: flex;
    gap: 5px;
  }
  
  .view-option {
    background: transparent;
    border: 1px solid var(--medium-gray, #eaeaea);
    border-radius: var(--border-radius-sm, 6px);
    padding: 8px 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--light-text, #666666);
  }
  
  .view-option:hover, .view-option.active {
    background-color: var(--light-pink, #fff0f5);
    color: var(--primary-pink, #ff6b9a);
    border-color: var(--primary-pink, #ff6b9a);
  }
  
  .product-count {
    margin-bottom: 20px;
  }
  
  .active-filters {
    margin-bottom: 20px;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 10px;
  }
  
  .active-filters-title {
    font-size: 14px;
    color: var(--dark-text, #333333);
    font-weight: 500;
  }
  
  .active-filters-list {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .active-filter-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 5px 10px;
    background-color: var(--light-pink, #fff0f5);
    border-radius: var(--border-radius-sm, 6px);
    font-size: 13px;
    color: var(--primary-pink, #ff6b9a);
  }
  
  .active-filter-remove {
    color: var(--primary-pink, #ff6b9a);
    transition: all 0.3s ease;
  }
  
  .active-filter-remove:hover {
    color: var(--primary-purple, #9370db);
  }
  
  @media (max-width: 767px) {
    .collection-toolbar {
      display: none;
    }
    
    .mobile-filter-sort-bar {
      display: flex;
    }
    
    .filter-drawer {
      max-width: 100%;
      right: -100%;
    }
    
