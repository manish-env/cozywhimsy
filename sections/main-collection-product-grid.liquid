<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter drawer functionality
    const filterButton = document.querySelector('.filter-button');
    const mobileFilterButton = document.querySelector('.mobile-filter-button');
    const filterDrawer = document.getElementById('FilterDrawer');
    const closeFilter = document.querySelector('.close-filter');
    const overlay = document.createElement('div');
    overlay.classList.add('drawer-overlay');
    document.body.appendChild(overlay);
    
    function openFilterDrawer() {
      filterDrawer.classList.add('active');
      document.body.classList.add('drawer-open');
      overlay.classList.add('active');
    }
    
    function closeFilterDrawer() {
      filterDrawer.classList.remove('active');
      document.body.classList.remove('drawer-open');
      overlay.classList.remove('active');
    }
    
    if (filterButton) {
      filterButton.addEventListener('click', openFilterDrawer);
    }
    
    if (mobileFilterButton) {
      mobileFilterButton.addEventListener('click', openFilterDrawer);
    }
    
    if (closeFilter) {
      closeFilter.addEventListener('click', closeFilterDrawer);
    }
    
    overlay.addEventListener('click', closeFilterDrawer);
    
    // Mobile Sort Drawer
    const mobileSortButton = document.querySelector('.mobile-sort-button');
    const sortDrawer = document.getElementById('SortDrawer');
    const closeSort = document.querySelector('.close-sort');
    const sortOptions = document.querySelectorAll('.sort-option');
    
    function openSortDrawer() {
      sortDrawer.classList.add('active');
      document.body.classList.add('drawer-open');
      overlay.classList.add('active');
    }
    
    function closeSortDrawer() {
      sortDrawer.classList.remove('active');
      document.body.classList.remove('drawer-open');
      overlay.classList.remove('active');
    }
    
    if (mobileSortButton) {
      mobileSortButton.addEventListener('click', openSortDrawer);
    }
    
    if (closeSort) {
      closeSort.addEventListener('click', closeSortDrawer);
    }
    
    sortOptions.forEach(option => {
      option.addEventListener('click', function() {
        const value = this.getAttribute('data-value');
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set('sort_by', value);
        window.location.href = currentUrl.toString();
      });
    });
    
    // View options (grid/list)
    const gridView = document.querySelector('.grid-view');
    const listView = document.querySelector('.list-view');
    const productGrid = document.querySelector('.product-grid');
    
    if (gridView && listView && productGrid) {
      gridView.addEventListener('click', function() {
        productGrid.classList.remove('list-layout');
        gridView.classList.add('active');
        listView.classList.remove('active');
        localStorage.setItem('collection-view', 'grid');
      });
      
      listView.addEventListener('click', function() {
        productGrid.classList.add('list-layout');
        listView.classList.add('active');
        gridView.classList.remove('active');
        localStorage.setItem('collection-view', 'list');
      });
      
      // Check saved preference
      const savedView = localStorage.getItem('collection-view');
      if (savedView === 'list') {
        productGrid.classList.add('list-layout');
        listView.classList.add('active');
        gridView.classList.remove('active');
      }
    }
    
    // Add touch-friendly swipe gestures for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    
    document.addEventListener('touchstart', e => {
      touchStartX = e.changedTouches[0].screenX;
    }, false);
    
    document.addEventListener('touchend', e => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, false);
    
    function handleSwipe() {
      const swipeDistance = touchEndX - touchStartX;
      
      // If drawer is open and user swipes right, close it
      if (filterDrawer.classList.contains('active') && swipeDistance > 50) {
        closeFilterDrawer();
      }
      
      // If sort drawer is open and user swipes down, close it
      if (sortDrawer.classList.contains('active') && swipeDistance < -50) {
        closeSortDrawer();
      }
    }
  });
</script>

