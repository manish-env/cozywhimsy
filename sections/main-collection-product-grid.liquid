<style>
  .collection-product-grid {
    padding: var(--padding-top, 36px) 0 var(--padding-bottom, 36px);
  }
  
  .product-container {
    padding: 0;
    width: 100%;
    max-width: 100%;
  }
  
  .collection-toolbar {
    padding: 0 15px;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .filter-button {
    background: var(--light-pink);
    border: none;
    padding: 8px 15px;
    border-radius: 30px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: all 0.3s ease;
  }
  
  .filter-button:hover {
    background: var(--primary-pink);
    color: white;
  }
  
  .filter-drawer {
    position: fixed;
    top: 0;
    left: -350px;
    width: 320px;
    height: 100vh;
    background: white;
    z-index: 1000;
    box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
    transition: left 0.3s ease;
    overflow-y: auto;
    padding: 20px;
  }
  
  .filter-drawer.active {
    left: 0;
  }
  
  .filter-drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--medium-gray);
  }
  
  .close-filter {
    background: none;
    border: none;
    font-size: 18px;
    cursor: pointer;
    color: var(--dark-text);
  }
  
  .filter-group {
    margin-bottom: 15px;
  }
  
  .filter-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    padding: 10px 0;
    font-weight: 500;
  }
  
  .filter-content {
    padding: 10px 0 10px 10px;
  }
  
  .filter-options {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .filter-option {
    margin-bottom: 8px;
  }
  
  .filter-label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }
  
  .filter-count {
    color: var(--light-text);
    font-size: 13px;
  }
  
  .price-range {
    padding: 10px 0;
  }
  
  .price-inputs {
    display: flex;
    gap: 10px;
  }
  
  .field {
    flex: 1;
  }
  
  .field label {
    display: block;
    margin-bottom: 5px;
    font-size: 13px;
  }
  
  .field input {
    width: 100%;
    padding: 8px;
    border: 1px solid var(--medium-gray);
    border-radius: 4px;
  }
  
  .filter-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid var(--medium-gray);
  }
  
  .apply-filters {
    background: var(--primary-pink);
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 30px;
    font-weight: 500;
    cursor: pointer;
  }
  
  .clear-filters {
    color: var(--light-text);
    text-decoration: underline;
    padding: 8px 0;
  }
  
  .collection-sort {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .sort-by {
    padding: 8px 15px;
    border: 1px solid var(--medium-gray);
    border-radius: 30px;
    background: white;
    font-size: 14px;
  }
  
  .product-count {
    margin-bottom: 20px;
    color: var(--light-text);
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop, 4), 1fr);
    gap: 20px;
    padding: 0;
  }
  
  .product-card {
    position: relative;
    background-color: var(--card-background-color, white);
    border-radius: var(--card-border-radius, 8px);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  {% if section.settings.enable_card_hover %}
  .product-card:hover {
    transform: translateY(-5px);
    {% if section.settings.card_style == 'shadowed' %}
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    {% endif %}
  }
  {% endif %}
  
  .product-image-container {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
  }
  
  .product-image-container.square {
    padding-bottom: 100%;
  }
  
  .product-image-container.portrait {
    padding-bottom: 125%;
  }
  
  .product-image-container.landscape {
    padding-bottom: 80%;
  }
  
  .product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  {% if section.settings.enable_image_zoom %}
  .product-card:hover .product-image {
    transform: scale(1.05);
  }
  {% endif %}
  
  .product-image-hover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  {% if section.settings.enable_image_flip %}
  .product-card:hover .product-image-hover {
    opacity: 1;
