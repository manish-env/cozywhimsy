<div class="page-width page-width--narrow">
  <div class="page-container">
    <div class="page-header">
      <h1 class="page-title">{{ page.title | escape }}</h1>
    </div>
    <div class="page-content rte">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Page Content"
    }
  ]
}
{% endschema %}
