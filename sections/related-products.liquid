              </div>
            {%- endunless -%}
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
      
      {% comment %} If we still don't have enough products, fill with random products {% endcomment %}
      {%- if related_products_shown < products_to_show -%}
        {%- assign additional_needed = products_to_show | minus: related_products_shown -%}
