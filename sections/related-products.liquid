<section class="related-products">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.heading | escape }}</h2>
    </div>
    
    <div class="product-grid" data-columns-desktop="{{ section.settings.columns_desktop }}" data-columns-mobile="{{ section.settings.columns_mobile }}">
      {%- assign current_product = product -%}
      {%- assign related_products_shown = 0 -%}
      {%- assign products_to_show = section.settings.products_to_show | default: 4 -%}
      
      {% comment %} First try to find products with matching tags {% endcomment %}
      {%- if current_product.tags.size > 0 -%}
        {%- for tag in current_product.tags -%}
          {%- if related_products_shown >= products_to_show -%}
            {%- break -%}
          {%- endif -%}
          
          {%- for related_product in collections.all.products -%}
            {%- if related_products_shown >= products_to_show -%}
              {%- break -%}
            {%- endif -%}
            
            {%- if related_product.id != current_product.id and related_product.tags contains tag and related_product.available -%}
              {%- unless forloop.index0 > 0 and related_products_shown > 0 and related_products contains related_product.id -%}
                {%- assign related_products_shown = related_products_shown | plus: 1 -%}
                {%- assign related_products = related_products | append: related_product.id | append: ',' -%}
                
                <div class="product-card">
                  {% if related_product.tags contains 'new' %}
                    <div class="product-badge">New</div>
                  {% elsif related_product.tags contains 'bestseller' %}
                    <div class="product-badge bestseller">Bestseller</div>
                  {% elsif related_product.compare_at_price > related_product.price %}
                    <div class="product-badge sale">Sale</div>
                  {% endif %}
                  
                  <a href="{{ related_product.url }}" class="product-img-link">
                    <div class="product-image-container" style="--image-ratio: {{ section.settings.image_ratio }};">
                      <img src="{{ related_product.featured_image | img_url: 'master' }}" alt="{{ related_product.title | escape }}" class="product-image">
                      
                      {% if section.settings.show_secondary_image and related_product.images.size > 1 %}
                        <img src="{{ related_product.images[1] | img_url: 'master' }}" alt="{{ related_product.title | escape }}" class="product-image-hover">
                      {% endif %}
                    </div>
                  </a>
                  
                  <div class="product-info">
                    {% if section.settings.show_vendor %}
                      <div class="product-vendor">{{ related_product.vendor }}</div>
                    {% endif %}
                    
                    <h3 class="product-title">
                      <a href="{{ related_product.url }}">{{ related_product.title }}</a>
                    </h3>
                    
                    <div class="product-price">
                      {% if related_product.compare_at_price > related_product.price %}
                        <span class="sale-price">{{ related_product.price | money }}</span>
                        <span class="compare-price">{{ related_product.compare_at_price | money }}</span>
                      {% else %}
                        <span class="regular-price">{{ related_product.price | money }}</span>
                      {% endif %}
                    </div>
                    
                    {% if section.settings.show_rating and related_product.metafields.reviews.rating %}
                      <div class="product-rating">
                        <div class="stars" style="--rating: {{ related_product.metafields.reviews.rating.value }};">
                          <span>★★★★★</span>
                        </div>
                        <span class="rating-count">({{ related_product.metafields.reviews.rating_count }})</span>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {%- endunless -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endfor -%}
      {%- endif -%}
      
      {% comment %} If we don't have enough related products by tag, fill with products from the same collection {% endcomment %}
      {%- if related_products_shown < products_to_show and collection != blank -%}
        {%- for related_product in collection.products -%}
          {%- if related_products_shown >= products_to_show -%}
            {%- break -%}
