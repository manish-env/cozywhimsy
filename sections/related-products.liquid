                      <img src="{{ related_product.images[1] | img_url: 'master' }}" alt="{{ related_product.title | escape }}" class="product-image-hover">
                    {% endif %}
                  </div>
                </a>
                
                <div class="product-info">
                  {% if section.settings.show_vendor %}
                    <div class="product-vendor">{{ related_product.vendor }}</div>
                  {% endif %}
                  
