                      <span class="compare-price">{{ related_product.compare_at_price | money }}</span>
                    {% else %}
                      <span class="regular-price">{{ related_product.price | money }}</span>
                    {% endif %}
                  </div>
                  
                  {% if section.settings.show_rating and related_product.metafields.reviews.rating %}
                    <div class="product-rating">
                      <div class="stars" style="--rating: {{ related_product.metafields.reviews.rating.value }};">
                        <span>★★★★★</span>
                      </div>
                      <span class="rating-count">({{ related_product.metafields.reviews.rating_count }})</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            {%- endunless -%}
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
      
      {% comment %} If no products were found, show placeholders {% endcomment %}
      {%- if related_products_shown == 0 -%}
        {%- for i in (1..4) -%}
          <div class="product-card placeholder">
            <div class="product-image-container">
              <div class="placeholder-image"></div>
            </div>
            <div class="product-info">
              <h3 class="product-title">Sample Product</h3>
              <div class="product-price">
                <span class="regular-price">$29.99</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', function() {
      const productId = this.getAttribute('data-product-id');
      if (productId) {
        if (this.textContent.trim() === 'View Options') {
          window.location.href = '/products/' + productId;
        } else {
          // Add to cart functionality
          // This would typically use the Shopify AJAX API
          console.log('Adding product to cart:', productId);
        }
      }
    });
  });
  
  document.querySelectorAll('.wishlist-btn').forEach(button => {
    button.addEventListener('click', function() {
      this.classList.toggle('active');
      const icon = this.querySelector('i');
      if (icon.classList.contains('far')) {
        icon.classList.remove('far');
        icon.classList.add('fas');
      } else {
        icon.classList.remove('fas');
        icon.classList.add('far');
      }
    });
  });
</script>

