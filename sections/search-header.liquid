<div class="search-header" style="
  {% if section.settings.mobile_padding_top != blank %}
    --mobile-padding-top: {{ section.settings.mobile_padding_top }}px;
  {% endif %}
  {% if section.settings.mobile_padding_bottom != blank %}
    --mobile-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  {% endif %}
  {% if section.settings.mobile_margin_top != blank %}
    --mobile-margin-top: {{ section.settings.mobile_margin_top }}px;
  {% endif %}
  {% if section.settings.mobile_margin_bottom != blank %}
    --mobile-margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
  {% endif %}
  {% if section.settings.background_color != blank %}
    background-color: {{ section.settings.background_color }};
  {% endif %}
">
  <div class="container">
    <!-- Search header with no content -->
  </div>
</div>

<style>
  .search-header {
    padding: {{ section.settings.padding_top | default: 10 }}px 0 {{ section.settings.padding_bottom | default: 10 }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  @media screen and (max-width: 767px) {
    .search-header {
      padding-top: var(--mobile-padding-top, {{ section.settings.padding_top | default: 10 }}px);
      padding-bottom: var(--mobile-padding-bottom, {{ section.settings.padding_bottom | default: 10 }}px);
      margin-top: var(--mobile-margin-top, 0);
      margin-bottom: var(--mobile-margin-bottom, 0);
    }
  }
</style>

{% schema %}
{
  "name": "Search Header",
  "settings": [
    {
      "type": "header",
      "content": "Visual Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile top padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile bottom padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "mobile_margin_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile top margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile bottom margin",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Search Header",
      "category": "Search"
    }
  ]
}
{% endschema %}
