{% stylesheet %}
.video-product-section {
  padding: 60px 0;
  position: relative;
  overflow: hidden;
}

.section-header {
  text-align: {{ section.settings.text_alignment }};
  margin-bottom: 40px;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: {{ section.settings.text_alignment }};
}

.section-header::after {
  content: '';
  display: block;
  width: 60px;
  height: 3px;
  background: linear-gradient(45deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  margin: 15px auto 0;
  border-radius: 3px;
  
  {% if section.settings.text_alignment == 'left' %}
    margin-left: 0;
  {% elsif section.settings.text_alignment == 'right' %}
    margin-left: auto;
    margin-right: 0;
  {% endif %}
}

.section-title {
  font-size: {{ section.settings.heading_size }}px;
  color: {{ section.settings.heading_color }};
  margin-bottom: 10px;
  font-weight: {{ section.settings.heading_weight }};
  line-height: 1.2;
}

.section-title.gradient-text {
  background: linear-gradient(to right, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.section-subheading {
  font-size: {{ section.settings.subheading_size }}px;
  line-height: 1.5;
  margin-top: 5px;
  margin-bottom: 20px;
  max-width: 800px;
  color: {{ section.settings.subheading_color }};
  font-weight: {{ section.settings.subheading_weight }};
}

.section-header.text-center .section-subheading {
  margin-left: auto;
  margin-right: auto;
}

.section-header.text-right .section-subheading {
  margin-left: auto;
  margin-right: 0;
}

.section-header.text-left .section-subheading {
  margin-left: 0;
  margin-right: auto;
}

.section-subheading.gradient-text {
  background: linear-gradient(to right, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }});
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.view-all-link {
  color: {{ section.settings.gradient_color_1 }};
  font-weight: 600;
  margin-top: 10px;
  display: inline-block;
  transition: all 0.3s ease;
}

.view-all-link:hover {
  color: {{ section.settings.gradient_color_2 }};
  transform: translateX(5px);
}

.video-product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 15px;
  max-width: 520px;
  margin: 0 auto;
}

.video-product {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  background-color: #1a1a1a;
  border: 1px solid #2a2a2a;
}

.video-container {
  position: relative;
  aspect-ratio: 1/1;
}

.product-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-views {
  position: absolute;
  bottom: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.7);
  color: var(--white);
  padding: 3px 8px;
  border-radius: 20px;
  font-size: 0.8rem;
}

.wishlist-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 30px;
  height: 30px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 2;
  transition: all 0.3s ease;
}

.wishlist-icon:hover {
  background-color: {{ section.settings.gradient_color_1 }};
}

.wishlist-icon svg {
  width: 16px;
  height: 16px;
  fill: none;
  stroke: var(--white);
  stroke-width: 2;
  transition: all 0.3s ease;
}

.wishlist-icon.active svg {
  fill: {{ section.settings.gradient_color_1 }};
  stroke: {{ section.settings.gradient_color_1 }};
}

.video-product-info {
  padding: 15px;
}

.video-product-title {
  font-size: 1.1rem;
  margin-bottom: 5px;
  color: var(--white);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.video-product-price {
  color: {{ section.settings.gradient_color_1 }};
  font-weight: bold;
  margin-bottom: 10px;
}

.buy-now-btn {
  width: 100%;
  padding: 8px;
  background: {{ section.settings.gradient_color_1 }};
  color: var(--black);
  border: none;
  border-radius: 5px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  display: block;
  text-align: center;
}

.buy-now-btn:hover {
  background: linear-gradient(45deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }});
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(255, 107, 255, 0.3);
}

@media (max-width: 767px) {
  .video-product-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .video-product-grid {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // Video autoplay for product videos with IntersectionObserver
  const productVideos = document.querySelectorAll('.product-video');
  
  if ('IntersectionObserver' in window) {
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.play();
        } else {
          entry.target.pause();
        }
      });
    }, {
      threshold: 0.5
    });
    
    productVideos.forEach(video => {
      videoObserver.observe(video);
    });
  }
  
  // Wishlist functionality
  const wishlistIcons = document.querySelectorAll('.wishlist-icon');
  
  wishlistIcons.forEach(icon => {
    icon.addEventListener('click', function(e) {
      e.preventDefault();
      this.classList.toggle('active');
      
      // Animation effect
      const heart = this.querySelector('svg');
      heart.style.transform = 'scale(1.3)';
      setTimeout(() => {
        heart.style.transform = 'scale(1)';
      }, 300);
      
      // You could add actual wishlist functionality here
      const productId = this.getAttribute('data-product-id');
      console.log('Toggled wishlist for product ID:', productId);
    });
  });
});
{% endjavascript %}
