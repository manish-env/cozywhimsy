{%- style -%}
  .video-product-section {
    position: relative;
    padding: 20px 0;
    overflow: hidden;
  }
  
  .video-product-carousel {
    display: flex;
    overflow-x: hidden;
    scroll-behavior: smooth;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 10px 0;
    position: relative;
  }
  
  .video-product-carousel-track {
    display: flex;
    gap: 20px;
    transition: transform 0.3s ease-in-out;
    width: 100%;
  }
  
  .video-product-card {
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    height: auto;
    border: 1px solid #e0e0e0;
    width: 250px;
    flex-shrink: 0;
    margin: 0;
  }
  
  .video-container {
    position: relative;
    width: 100%;
    padding-top: 100%; /* Square aspect ratio */
    background-color: #f0f0f0;
    overflow: hidden;
  }
  
  .video-container video,
  .video-container img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .video-views {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 12px;
    padding: 3px 8px;
    border-radius: 4px;
  }
  
  .product-info {
    padding: 15px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    position: relative;
    height: 140px;
  }
  
  .product-title {
    font-size: 14px;
    margin: 0 0 5px;
    font-weight: 500;
    color: #333;
    line-height: 1.3;
    height: 36px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .product-price-container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 5px;
  }
  
  .product-price {
    font-weight: bold;
    font-size: 16px;
    color: #000;
  }
  
  .product-compare-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-left: 5px;
  }
  
  .product-discount {
    font-size: 12px;
    color: #ff6b9a;
    margin-left: 5px;
  }
  
  .buy-now-button {
    display: block;
    width: calc(100% - 30px);
    padding: 12px;
    background-color: #ff6b9a;
    color: white;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    text-decoration: none;
    position: absolute;
    bottom: 15px;
    left: 15px;
    right: 15px;
  }
  
  .buy-now-button:hover {
    background-color: #e1306c;
  }
  
  .out-of-stock-label {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #f0f0f0;
    color: #999;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    text-align: center;
    margin-top: auto;
  }
  
  .carousel-nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background-color: white;
    border-radius: 50%;
    border: 1px solid #e0e0e0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }
  
  .carousel-nav-button:hover {
    background-color: #f9f9f9;
  }
  
  .carousel-nav-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .carousel-prev {
    left: 10px;
  }
  
  .carousel-next {
    right: 10px;
  }
  
  .carousel-nav-button svg {
    width: 20px;
    height: 20px;
    fill: #333;
  }
  
  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 15px;
  }
  
  .carousel-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #e0e0e0;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .carousel-dot.active {
    background-color: #ff6b9a;
    transform: scale(1.2);
  }
  
  .section-header {
    margin-bottom: 25px;
  }
  
  .section-subheading {
    font-size: 16px;
    line-height: 1.5;
    margin-top: 5px;
    margin-bottom: 20px;
    text-align: center;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-subheading.gradient-text {
    background: linear-gradient(to right, #ff6b9a, #e1306c, #8a3ab9);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }
  
  @media screen and (max-width: 767px) {
    .video-product-card {
      width: 200px;
      height: auto;
    }
    
    .product-title {
      font-size: 13px;
    }
    
    .product-price {
      font-size: 14px;
    }
    
    .product-compare-price,
    .product-discount {
      font-size: 12px;
    }
    
    .buy-now-button,
    .out-of-stock-label {
      padding: 8px;
      font-size: 12px;
    }
    
    .carousel-nav-button {
      width: 30px;
      height: 30px;
    }
    
    .carousel-nav-button svg {
      width: 15px;
      height: 15px;
    }
  }
