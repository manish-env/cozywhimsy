{%- style -%}
  .video-product-section {
    position: relative;
    padding: {{ section.settings.padding_top | default: 40 }}px 0 {{ section.settings.padding_bottom | default: 40 }}px;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
    margin-top: var(--mobile-margin-top, {{ section.settings.margin_top | default: 0 }}px);
    margin-bottom: var(--mobile-margin-bottom, {{ section.settings.margin_bottom | default: 0 }}px);
  }
  
  .video-product-carousel {
    display: flex;
    overflow-x: hidden;
    scroll-behavior: smooth;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 10px 0;
    position: relative;
  }
  
  .section-header {
    margin-bottom: 25px;
  }
  
  .section-header.text-left {
    text-align: left;
  }
  
  .section-header.text-right {
    text-align: right;
  }
  
  .section-header.text-center {
    text-align: center;
  }
  
  .section-title {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 10px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
  }
  
  .section-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    line-height: 1.5;
    margin-top: 5px;
    margin-bottom: 20px;
    max-width: 800px;
    color: {{ section.settings.subheading_color }};
    font-weight: {{ section.settings.subheading_weight }};
  }
  
  .section-header.text-center .section-subheading {
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-header.text-right .section-subheading {
    margin-left: auto;
    margin-right: 0;
  }
  
  .section-header.text-left .section-subheading {
    margin-left: 0;
    margin-right: auto;
  }
  
  .section-subheading.gradient-text {
    background: linear-gradient(to right, #ff6b9a, #e1306c, #8a3ab9);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }
  
  @media screen and (max-width: 767px) {
    .video-product-section {
      padding-top: {{ section.settings.mobile_padding_top | default: section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom | default: section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.mobile_margin_top | default: section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.mobile_margin_bottom | default: section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="container video-product-section">
  {% if section.settings.title != blank %}
    <div class="section-header text-{{ section.settings.text_alignment }}">
      <h2 class="section-title">{{ section.settings.title | escape }}</h2>
      {% if section.settings.subheading != blank %}
        <div class="section-subheading{% if section.settings.use_gradient_text %} gradient-text{% endif %}">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="video-product-carousel">
    <div class="video-product-carousel-track">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product_video' %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
              {% assign compare_price = current_variant.compare_at_price %}
              {% assign price = current_variant.price %}
              {% assign discount_percentage = 0 %}
              
              {% if compare_price > price %}
                {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
              {% endif %}
              
              <div class="video-product-card" {{ block.shopify_attributes }}>
                <div class="video-container">
                  {% if block.settings.video_url != blank %}
                    <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% elsif block.settings.poster_image != blank %}
                    <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ product.title | escape }}" loading="lazy">
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% else %}
                    <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title | escape }}" loading="lazy">
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% endif %}
                </div>
                <div class="product-info">
                  <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                  <div class="product-price-container">
                    <span class="product-price">₹{{ price | money_without_currency }}</span>
                    {% if compare_price > price %}
                      <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                      <span class="product-discount">{{ discount_percentage }}% Off</span>
                    {% endif %}
                  </div>
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="product-form">
                      <input type="hidden" name="id" value="{{ current_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="buy-now-button">
                        Buy Now
                      </button>
                    </form>
                  {% else %}
                    <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% when 'video_slot' %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
              {% assign compare_price = current_variant.compare_at_price %}
              {% assign price = current_variant.price %}
              {% assign discount_percentage = 0 %}
              
              {% if compare_price > price %}
                {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
              {% endif %}
              
              <div class="video-product-card" {{ block.shopify_attributes }}>
                <div class="video-container">
                  <div id="video-slot-{{ block.id }}" class="video-slot"></div>
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                </div>
                <div class="product-info">
                  <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                  <div class="product-price-container">
                    <span class="product-price">₹{{ price | money_without_currency }}</span>
                    {% if compare_price > price %}
                      <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                      <span class="product-discount">{{ discount_percentage }}% Off</span>
                    {% endif %}
                  </div>
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="product-form">
                      <input type="hidden" name="id" value="{{ current_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="buy-now-button">
                        Buy Now
                      </button>
                    </form>
                  {% else %}
                    <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% when 'custom_video' %}
            {% assign product = block.settings.product %}
            <div class="video-product-card" {{ block.shopify_attributes }}>
              <div class="video-container">
                {% if block.settings.video_url != blank %}
                  <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% elsif block.settings.poster_image != blank %}
