{% comment %}
  Video Product Carousel Section
  
  A simple, clean product video carousel that matches the theme's style.
{% endcomment %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  <div class="video-product-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'product_video' %}
          {% assign product = block.settings.product %}
          {% if product != blank %}
            {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
            {% assign compare_price = current_variant.compare_at_price %}
            {% assign price = current_variant.price %}
            {% assign discount_percentage = 0 %}
            
            {% if compare_price > price %}
              {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
            {% endif %}
            
            <div class="video-product-card" {{ block.shopify_attributes }}>
              <div class="video-container">
                {% if block.settings.video_url != blank %}
                  <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                  </video>
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% elsif block.settings.poster_image != blank %}
                  <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% else %}
                  <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% endif %}
              </div>
              
              <div class="product-info">
                <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                
                <div class="product-price-container">
                  <span class="product-price">₹{{ price | money_without_currency }}</span>
                  
                  {% if compare_price > price %}
                    <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                    <span class="product-discount">{{ discount_percentage }}% Off</span>
                  {% endif %}
                </div>
                
                {% if product.available %}
                  <form method="post" action="/cart/add" class="product-form">
                    <input type="hidden" name="id" value="{{ current_variant.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="buy-now-button">
                      Buy Now
                    </button>
                  </form>
                {% else %}
                  <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
          
        {% when 'video_slot' %}
          {% assign product = block.settings.product %}
          {% if product != blank %}
            {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
            {% assign compare_price = current_variant.compare_at_price %}
            {% assign price = current_variant.price %}
            {% assign discount_percentage = 0 %}
            
            {% if compare_price > price %}
              {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
            {% endif %}
            
            <div class="video-product-card" {{ block.shopify_attributes }}>
              <div class="video-container">
                {% if block.settings.video_url != blank %}
                  <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                  </video>
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% elsif block.settings.poster_image != blank %}
                  <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% else %}
                  <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
                  
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% endif %}
              </div>
              
              <div class="product-info">
                <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                
                <div class="product-price-container">
                  <span class="product-price">₹{{ price | money_without_currency }}</span>
                  
                  {% if compare_price > price %}
                    <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                    <span class="product-discount">{{ discount_percentage }}% Off</span>
                  {% endif %}
                </div>
                
                {% if product.available %}
                  <form method="post" action="/cart/add" class="product-form">
                    <input type="hidden" name="id" value="{{ current_variant.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="buy-now-button">
                      Buy Now
                    </button>
                  </form>
                {% else %}
                  <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
          
        {% when 'custom_video' %}
          {% assign product = block.settings.product %}
          <div class="video-product-card" {{ block.shopify_attributes }}>
            <div class="video-container">
              {% if block.settings.video_url != blank %}
                <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                </video>
                
                {% if block.settings.show_views %}
                  <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                {% endif %}
              {% elsif block.settings.poster_image != blank %}
                <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ block.settings.title }}" loading="lazy">
                
                {% if block.settings.show_views %}
                  <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                {% endif %}
              {% else %}
                <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
                
                {% if block.settings.show_views %}
                  <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                {% endif %}
              {% endif %}
            </div>
            
            <div class="product-info">
              <h3 class="product-title">{{ block.settings.title }}</h3>
              
              <div class="product-price-container">
                {% if block.settings.price_text != blank %}
                  <span class="product-price">{{ block.settings.price_text }}</span>
                {% else %}
                  <span class="product-price">₹{{ price | money_without_currency }}</span>
                {% endif %}
                
                {% if block.settings.compare_price_text != blank %}
                  <span class="product-compare-price">{{ block.settings.compare_price_text }}</span>
                  {% if block.settings.discount_text != blank %}
                    <span class="product-discount">{{ block.settings.discount_text }}</span>
                  {% endif %}
                {% endif %}
              </div>
              
              {% if block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="buy-now-button">
                  {{ block.settings.button_text | default: 'BUY NOW' }}
                </a>
              {% elsif product != blank %}
                {% if product.available %}
                  <form method="post" action="/cart/add" class="product-form">
                    <input type="hidden" name="id" value="{{ product.selected_variant.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="buy-now-button">
                      {{ block.settings.button_text | default: 'BUY NOW' }}
                    </button>
                  </form>
                {% else %}
                  <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                {% endif %}
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

<style>
  .video-product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .video-product-card {
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    height: 100%;
    border: 1px solid #e0e0e0;
    max-width: 100%;
  }
  
  .video-container {
    position: relative;
    width: 100%;
    padding-top: 100%; /* Square aspect ratio */
    background-color: #f0f0f0;
    overflow: hidden;
  }
  
  .video-container video,
  .video-container img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .video-views {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 12px;
    padding: 3px 8px;
    border-radius: 4px;
  }
  
  .product-info {
    padding: 15px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .product-title {
    font-size: 14px;
    margin: 0 0 10px;
    font-weight: 500;
    color: #333;
  }
  
  .product-price-container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 15px;
    gap: 5px;
  }
  
  .product-price {
    font-weight: 600;
    font-size: 16px;
    color: #000;
  }
  
  .product-compare-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-left: 5px;
  }
  
  .product-discount {
    font-size: 12px;
    color: #ff6b9a;
    margin-left: 5px;
  }
  
  .buy-now-button {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #000;
    color: white;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    text-decoration: none;
    margin-top: auto;
  }
  
  .out-of-stock-label {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #f0f0f0;
    color: #999;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    text-align: center;
    margin-top: auto;
  }
  
  @media screen and (max-width: 767px) {
    .video-product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
    
    .product-title {
      font-size: 13px;
    }
    
    .product-price {
      font-size: 14px;
    }
    
    .product-compare-price,
    .product-discount {
      font-size: 12px;
    }
    
    .buy-now-button,
    .out-of-stock-label {
      padding: 8px;
      font-size: 12px;
    }
  }
</style>

