<div class="container video-product-section">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
      {% if section.settings.subheading != blank %}
        <div class="section-subheading{% if section.settings.use_gradient_text %} gradient-text{% endif %}" style="color: {{ section.settings.subheading_color }};">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="video-product-carousel">
    <div class="video-product-carousel-track">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product_video' %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
              {% assign compare_price = current_variant.compare_at_price %}
              {% assign price = current_variant.price %}
              {% assign discount_percentage = 0 %}
              
              {% if compare_price > price %}
                {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
              {% endif %}
              
              <div class="video-product-card" {{ block.shopify_attributes }}>
                <div class="video-container">
                  {% if block.settings.video_url != blank %}
                    <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% elsif block.settings.poster_image != blank %}
                    <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ product.title | escape }}" loading="lazy">
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% else %}
                    <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title | escape }}" loading="lazy">
                    {% if block.settings.show_views %}
                      <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                    {% endif %}
                  {% endif %}
                </div>
                <div class="product-info">
                  <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                  <div class="product-price-container">
                    <span class="product-price">₹{{ price | money_without_currency }}</span>
                    {% if compare_price > price %}
                      <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                      <span class="product-discount">{{ discount_percentage }}% Off</span>
                    {% endif %}
                  </div>
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="product-form">
                      <input type="hidden" name="id" value="{{ current_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="buy-now-button">
                        Buy Now
                      </button>
                    </form>
                  {% else %}
                    <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% when 'video_slot' %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              {% assign current_variant = product.selected_variant | default: product.first_available_variant %}
              {% assign compare_price = current_variant.compare_at_price %}
              {% assign price = current_variant.price %}
              {% assign discount_percentage = 0 %}
              
              {% if compare_price > price %}
                {% assign discount_percentage = compare_price | minus: price | times: 100 | divided_by: compare_price | round %}
              {% endif %}
              
              <div class="video-product-card" {{ block.shopify_attributes }}>
                <div class="video-container">
                  <div id="video-slot-{{ block.id }}" class="video-slot"></div>
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                </div>
                <div class="product-info">
                  <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                  <div class="product-price-container">
                    <span class="product-price">₹{{ price | money_without_currency }}</span>
                    {% if compare_price > price %}
                      <span class="product-compare-price">₹{{ compare_price | money_without_currency }}</span>
                      <span class="product-discount">{{ discount_percentage }}% Off</span>
                    {% endif %}
                  </div>
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="product-form">
                      <input type="hidden" name="id" value="{{ current_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="buy-now-button">
                        Buy Now
                      </button>
                    </form>
                  {% else %}
                    <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% when 'custom_video' %}
            {% assign product = block.settings.product %}
            <div class="video-product-card" {{ block.shopify_attributes }}>
              <div class="video-container">
                {% if block.settings.video_url != blank %}
                  <video class="product-video" muted loop playsinline autoplay poster="{{ block.settings.poster_image | img_url: 'large' }}">
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% elsif block.settings.poster_image != blank %}
                  <img src="{{ block.settings.poster_image | img_url: 'large' }}" alt="{{ block.settings.title | escape }}" loading="lazy">
                  {% if block.settings.show_views %}
                    <div class="video-views">{{ block.settings.views_count | default: '12K' }} Views</div>
                  {% endif %}
                {% endif %}
              </div>
              <div class="product-info">
                <h3 class="product-title">{{ block.settings.title }}</h3>
                <div class="product-price-container">
                  {% if block.settings.price_text != blank %}
                    <span class="product-price">{{ block.settings.price_text }}</span>
                  {% else %}
                    <span class="product-price">₹{{ price | money_without_currency }}</span>
                  {% endif %}
                  
                  {% if block.settings.compare_price_text != blank %}
                    <span class="product-compare-price">{{ block.settings.compare_price_text }}</span>
                    {% if block.settings.discount_text != blank %}
                      <span class="product-discount">{{ block.settings.discount_text }}</span>
                    {% endif %}
                  {% endif %}
                </div>
                {% if block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" class="buy-now-button">
                    {{ block.settings.button_text | default: 'BUY NOW' }}
                  </a>
                {% elsif product != blank %}
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="product-form">
                      <input type="hidden" name="id" value="{{ product.selected_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="buy-now-button">
                        {{ block.settings.button_text | default: 'BUY NOW' }}
                      </button>
                    </form>
                  {% else %}
                    <div class="out-of-stock-label">{{ block.settings.sold_out_text | default: 'SOLD OUT' }}</div>
                  {% endif %}
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
  
  <button class="carousel-nav-button carousel-prev" aria-label="Previous">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
  </button>
  <button class="carousel-nav-button carousel-next" aria-label="Next">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
  </button>
  
  <div class="carousel-dots"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    initVideoProductCarousel();
    
    // Initialize any video slots
    {% for block in section.blocks %}
      {% if block.type == 'video_slot' and block.settings.video_slot_code != blank %}
        try {
          const slotContainer = document.getElementById('video-slot-{{ block.id }}');
          if (slotContainer) {
            slotContainer.innerHTML = {{ block.settings.video_slot_code | json }};
          }
        } catch (e) {
          console.error('Error initializing video slot:', e);
        }
      {% endif %}
    {% endfor %}
  });
  
  function initVideoProductCarousel() {
    const carousel = document.querySelector('.video-product-carousel');
    const track = document.querySelector('.video-product-carousel-track');
    const cards = Array.from(track.querySelectorAll('.video-product-card'));
    const prevButton = document.querySelector('.carousel-prev');
    const nextButton = document.querySelector('.carousel-next');
    const dotsContainer = document.querySelector('.carousel-dots');
    
    if (!carousel || !track || cards.length === 0) return;
    
    // Calculate the number of visible items
    const carouselWidth = carousel.offsetWidth;
    const cardWidth = cards[0].offsetWidth;
    const gap = 20; // Gap between items in px
    const visibleItems = Math.floor(carouselWidth / (cardWidth + gap));
    const totalSlides = Math.ceil(cards.length / visibleItems);
    
    // Create dots
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('div');
      dot.classList.add('carousel-dot');
      if (i === 0) dot.classList.add('active');
      dot.dataset.index = i;
      dot.addEventListener('click', () => {
        goToSlide(i);
      });
      dotsContainer.appendChild(dot);
    }
    
    // Set initial state
    let currentSlide = 0;
    updateButtonState();
    
    // Add event listeners
    prevButton.addEventListener('click', () => {
      if (currentSlide > 0) {
        goToSlide(currentSlide - 1);
      }
    });
    
    nextButton.addEventListener('click', () => {
      if (currentSlide < totalSlides - 1) {
        goToSlide(currentSlide + 1);
      }
    });
    
    // Touch events for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    
    carousel.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });
    
    carousel.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });
    
    function handleSwipe() {
      const swipeThreshold = 50;
      if (touchStartX - touchEndX > swipeThreshold) {
        // Swipe left
        if (currentSlide < totalSlides - 1) {
          goToSlide(currentSlide + 1);
        }
      } else if (touchEndX - touchStartX > swipeThreshold) {
        // Swipe right
        if (currentSlide > 0) {
          goToSlide(currentSlide - 1);
        }
      }
    }
    
    // Play/pause videos when they enter/exit the viewport
    const videos = document.querySelectorAll('.product-video');
    if (videos.length > 0 && 'IntersectionObserver' in window) {
      const videoObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.play();
          } else {
            entry.target.pause();
          }
        });
      }, { threshold: 0.5 });
      
      videos.forEach(video => {
        videoObserver.observe(video);
      });
    }
    
    // Handle window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        // Reset carousel on resize
        goToSlide(0);
      }, 250);
    });
    
    function goToSlide(slideIndex) {
      currentSlide = slideIndex;
      const slideWidth = cardWidth + gap;
      const offset = -1 * currentSlide * slideWidth * visibleItems;
      track.style.transform = `translateX(${offset}px)`;
      
      // Update dots
      const dots = dotsContainer.querySelectorAll('.carousel-dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentSlide);
      });
      
      updateButtonState();
    }
    
    function updateButtonState() {
      prevButton.disabled = currentSlide === 0;
      nextButton.disabled = currentSlide === totalSlides - 1;
    }
  }
</script>
