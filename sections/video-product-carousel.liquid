      width: 250px;
    }
    
    .section-title {
      font-size: 20px;
    }
    
    .product-info {
      flex-wrap: wrap;
    }
    
    .product-actions {
      margin-left: 0;
      margin-top: 10px;
      width: 100%;
    }
    
    .buy-now-button, .view-product-button, .out-of-stock-label {
      width: 100%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('video-product-carousel-{{ section.id }}');
    if (!carousel) return;
    
    const track = carousel.querySelector('.video-carousel-track');
    const prevBtn = carousel.querySelector('.carousel-prev');
    const nextBtn = carousel.querySelector('.carousel-next');
    const items = carousel.querySelectorAll('.video-product-item');
    
    if (!track || !prevBtn || !nextBtn || items.length === 0) return;
    
    // Handle navigation
    prevBtn.addEventListener('click', () => {
      const itemWidth = items[0].offsetWidth + 20; // width + margin
      track.scrollBy({ left: -itemWidth * 2, behavior: 'smooth' });
    });
    
    nextBtn.addEventListener('click', () => {
      const itemWidth = items[0].offsetWidth + 20; // width + margin
      track.scrollBy({ left: itemWidth * 2, behavior: 'smooth' });
    });
    
    // Handle videos
    const videos = carousel.querySelectorAll('.product-video');
    
    // Initialize Intersection Observer for videos
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const video = entry.target;
        
        if (entry.isIntersecting) {
          // Autoplay when in view
          video.play().catch(e => console.log('Autoplay prevented:', e));
        } else {
          // Pause when out of view
          video.pause();
        }
      });
    }, { threshold: 0.6 });
    
    videos.forEach(video => {
      videoObserver.observe(video);
    });
  });
</script>

