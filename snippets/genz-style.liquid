{% if settings.theme_style == 'genz' %}
<style>
  /* Gen Z Color Palette */
  :root {
    --neon-pink: {{ settings.genz_neon_pink }};
    --electric-blue: {{ settings.genz_electric_blue }};
    --violet: {{ settings.genz_violet }};
    --lime: {{ settings.genz_lime }};
    --black: {{ settings.genz_black }};
    --white: {{ settings.genz_white }};
    --gradient: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    --gradient-text: linear-gradient(to right, var(--neon-pink), var(--electric-blue), var(--violet));
  }

  /* Base Styles */
  body.genz-mode {
    background-color: var(--black);
    color: var(--white);
    line-height: 1.6;
    overflow-x: hidden;
  }

  /* Typography */
  .genz-mode h1, 
  .genz-mode h2, 
  .genz-mode h3, 
  .genz-mode h4,
  .genz-mode .section-title {
    font-family: {{ settings.genz_heading_font.family }}, 'Impact', 'Arial Black', sans-serif;
    font-weight: {{ settings.genz_heading_font.weight }};
    letter-spacing: 1px;
  }

  .genz-mode h1,
  .genz-mode .main-title {
    font-size: 3rem;
    background: var(--gradient-text);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 0 10px rgba(255, 107, 255, 0.3);
  }

  .genz-mode h2,
  .genz-mode .section-title {
    font-size: 2rem;
    background: var(--gradient-text);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    margin-bottom: 1.5rem;
    display: inline-block;
  }

  /* Header */
  .genz-mode .header {
    background-color: rgba(18, 18, 18, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(138, 43, 226, 0.3);
  }

  .genz-mode .header__heading {
    color: var(--white);
  }

  /* Navigation */
  .genz-mode .header__menu-item {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    transition: all 0.3s ease;
  }

  .genz-mode .header__menu-item:hover {
    color: var(--neon-pink);
  }

  .genz-mode .header__menu-item::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient);
    transition: width 0.3s ease;
  }

  .genz-mode .header__menu-item:hover::after {
    width: 100%;
  }

  /* Buttons */
  .genz-mode .button,
  .genz-mode .product-form__submit,
  .genz-mode .cart__checkout-button {
    background: var(--gradient);
    color: var(--black);
    border: none;
    border-radius: 50px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(255, 107, 255, 0.3);
  }

  .genz-mode .button:hover,
  .genz-mode .product-form__submit:hover,
  .genz-mode .cart__checkout-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(255, 107, 255, 0.5);
  }

  /* Section Headers */
  .genz-mode .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  /* Product Cards */
  .genz-mode .card {
    background-color: rgba(30, 30, 30, 0.8);
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(138, 43, 226, 0.2);
  }

  .genz-mode .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(138, 43, 226, 0.3);
    border-color: var(--neon-pink);
  }

  .genz-mode .card__content {
    padding: 20px;
  }

  .genz-mode .card__information {
    color: var(--white);
  }

  .genz-mode .price {
    color: var(--electric-blue);
    font-weight: bold;
  }

  /* Instagram-style elements */
  .genz-mode .instagram-feed {
    background-color: rgba(30, 30, 30, 0.8);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  /* Featured Categories */
  .genz-mode .featured-category {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .genz-mode .featured-category:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(138, 43, 226, 0.4);
  }

  .genz-mode .featured-category::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, transparent 50%, rgba(18, 18, 18, 0.8) 100%);
    z-index: 1;
  }

  .genz-mode .featured-category-title {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: var(--white);
    font-weight: bold;
    z-index: 2;
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
  }

  /* Footer */
  .genz-mode .footer {
    background-color: rgba(18, 18, 18, 0.95);
    border-top: 1px solid rgba(138, 43, 226, 0.3);
    padding: 60px 0 30px;
  }

  .genz-mode .footer__content {
    color: var(--white);
  }

  /* Video Product Carousel */
  .genz-mode .video-product-carousel {
    background-color: rgba(30, 30, 30, 0.8);
    border-radius: 15px;
    overflow: hidden;
    padding: 30px;
    margin: 40px 0;
  }

  .genz-mode .video-product-card {
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(138, 43, 226, 0.2);
    transition: all 0.3s ease;
  }

  .genz-mode .video-product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(138, 43, 226, 0.3);
    border-color: var(--neon-pink);
  }

  /* Mobile Adjustments */
  @media (max-width: 767px) {
    .genz-mode h1 {
      font-size: 2.5rem;
    }
    
    .genz-mode h2 {
      font-size: 1.8rem;
    }
    
    .genz-mode .button {
      padding: 10px 25px;
    }
  }

  /* Neon glow effects */
  .genz-mode .neon-glow {
    box-shadow: 0 0 10px var(--neon-pink), 0 0 20px var(--electric-blue);
  }

  /* Instagram-style story circles for categories */
  .genz-mode .story-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(45deg, var(--neon-pink), var(--violet));
    padding: 3px;
    margin: 0 auto 10px;
  }

  .genz-mode .story-circle-inner {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: var(--black);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .genz-mode .story-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
{% endif %}
