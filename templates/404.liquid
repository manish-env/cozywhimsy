{% comment %}
  404 page template that also handles wishlist functionality
{% endcomment %}

<script>
  // Check if this is a wishlist page request
  if (window.location.pathname === '/pages/wishlist') {
    document.addEventListener('DOMContentLoaded', function() {
      // Replace 404 content with wishlist content
      document.getElementById('NotFoundContent').style.display = 'none';
      document.getElementById('WishlistContent').style.display = 'block';
    });
  }
</script>

<div class="page-width page-content">
  <div id="NotFoundContent">
    <div class="section-header text-center">
      <h1>{{ 'general.404.title' | t | default: 'Page not found' }}</h1>
      <div class="rte">
        <p>{{ 'general.404.subtext' | t | default: 'The page you were looking for does not exist.' }}</p>
        <p>{{ 'general.404.search_suggestion' | t | default: 'Maybe you want to try the search instead?' }}</p>
      </div>
      
      <form action="/search" method="get" class="search-form search-form--404">
        <input type="search" name="q" placeholder="{{ 'general.search.placeholder' | t | default: 'Search' }}" class="search-input">
        <button type="submit" class="search-button">
          <i class="fas fa-search"></i>
        </button>
      </form>
      
      <div class="404-buttons">
        <a href="/" class="btn btn-primary">{{ 'general.404.back_to_home' | t | default: 'Back to Home' }}</a>
        <button onclick="history.back()" class="btn btn-secondary">{{ 'general.404.back' | t | default: 'Go Back' }}</button>
      </div>
    </div>
  </div>
  
  <div id="WishlistContent" style="display: none;">
    {% section 'wishlist' %}
  </div>
</div>

<style>
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
  }
  
  .section-header {
    margin-bottom: 40px;
  }
  
  .search-form--404 {
    max-width: 400px;
    margin: 30px auto;
    position: relative;
  }
  
  .search-input {
    width: 100%;
    padding: 12px 50px 12px 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }
  
  .search-button {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 50px;
    background: transparent;
    border: none;
    font-size: 18px;
    color: #555;
    cursor: pointer;
  }
  
  .404-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 30px;
  }
  
  .btn {
    padding: 12px 25px;
    border-radius: 4px;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    border: none;
    transition: all 0.2s ease;
  }
  
  .btn-primary {
    background-color: var(--primary-pink, #ff6b9a);
    color: white;
  }
  
  .btn-primary:hover {
    background-color: var(--primary-pink-dark, #e55c8a);
  }
  
  .btn-secondary {
    background-color: #f5f5f5;
    color: #333;
  }
  
  .btn-secondary:hover {
    background-color: #e5e5e5;
  }
</style>
